{
  "name": "schoolerp-endpoint-tests",
  "version": "1.0.0",
  "description": "Comprehensive endpoint testing for School ERP system",
  "scripts": {
    "test": "jest --verbose --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "mysql2": "^3.6.5",
    "dotenv": "^16.3.1"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/setup.js"],
    "testTimeout": 30000,
    "testMatch": ["**/*.test.js"],
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/coverage/**"
    ]
  }
}