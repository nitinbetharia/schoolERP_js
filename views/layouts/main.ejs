<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="<%= description || 'School ERP Management System' %>">
    <title><%= title %> - <%= tenant ? tenant.name : 'School ERP System' %></title>
    
    <!-- Tailwind CSS (Q3 ENFORCED) -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Alpine.js for reactive components -->
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
    
    <!-- Custom CSS for tenant branding -->
    <link rel="stylesheet" href="/static/css/app.css">
    
    <!-- Tenant-specific CSS variables -->
    <style>
        :root {
            <% if (tenant && tenant.branding) { %>
            --primary-color: <%= tenant.branding.primaryColor || '#3B82F6' %>;
            --secondary-color: <%= tenant.branding.secondaryColor || '#64748B' %>;
            --accent-color: <%= tenant.branding.accentColor || '#10B981' %>;
            <% } else { %>
            /* System admin branding */
            --primary-color: #7C3AED;
            --secondary-color: #4C1D95;
            --accent-color: #8B5CF6;
            <% } %>
        }
        
        .brand-primary { background-color: var(--primary-color); }
        .brand-secondary { background-color: var(--secondary-color); }
        .brand-accent { background-color: var(--accent-color); }
        .text-brand-primary { color: var(--primary-color); }
        .text-brand-secondary { color: var(--secondary-color); }
        .text-brand-accent { color: var(--accent-color); }
        .border-brand-primary { border-color: var(--primary-color); }
        .hover\:bg-brand-primary:hover { background-color: var(--primary-color); }
        
        /* Mobile-first responsive utilities */
        .sidebar-transition {
            transition: transform 0.3s ease-in-out;
        }
        
        /* Custom scrollbar for sidebar */
        .custom-scrollbar::-webkit-scrollbar {
            width: 4px;
        }
        .custom-scrollbar::-webkit-scrollbar-track {
            background: transparent;
        }
        .custom-scrollbar::-webkit-scrollbar-thumb {
            background: rgba(156, 163, 175, 0.5);
            border-radius: 2px;
        }
    </style>
    
    <!-- Favicon -->
    <% if (tenant && tenant.branding && tenant.branding.favicon) { %>
    <link rel="icon" type="image/png" href="<%= tenant.branding.favicon %>">
    <% } else { %>
    <link rel="icon" type="image/png" href="/static/images/favicon.png">
    <% } %>
    
    <!-- Custom head content -->
    <% if (typeof customHead !== 'undefined') { %>
    <%- customHead %>
    <% } %>
</head>
<body class="bg-gray-50 font-sans antialiased min-h-screen" x-data="{ sidebarOpen: false }">
    <!-- Flash Messages -->
    <%- include('../partials/alerts') %>
    
    <!-- Mobile sidebar backdrop -->
    <div x-show="sidebarOpen" 
         x-transition:enter="transition-opacity ease-linear duration-300"
         x-transition:enter-start="opacity-0"
         x-transition:enter-end="opacity-100"
         x-transition:leave="transition-opacity ease-linear duration-300"
         x-transition:leave-start="opacity-100"
         x-transition:leave-end="opacity-0"
         class="fixed inset-0 z-40 lg:hidden"
         style="display: none;">
        <div class="fixed inset-0 bg-gray-600 bg-opacity-75" @click="sidebarOpen = false"></div>
    </div>
    
    <!-- Sidebar -->
    <div class="fixed inset-y-0 left-0 z-50 w-64 bg-white shadow-lg transform lg:translate-x-0 lg:static lg:inset-0 sidebar-transition custom-scrollbar overflow-y-auto"
         :class="{ '-translate-x-full': !sidebarOpen, 'translate-x-0': sidebarOpen }"
         x-show="sidebarOpen || window.innerWidth >= 1024">
        
        <!-- Navigation content -->
        <%- include('../partials/navigation') %>
    </div>
    
    <!-- Main content area -->
    <div class="lg:ml-64 flex flex-col min-h-screen">
        <!-- Top header bar -->
        <header class="bg-white shadow-sm border-b border-gray-200 lg:hidden">
            <div class="px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between items-center py-4">
                    <!-- Mobile menu button -->
                    <button @click="sidebarOpen = !sidebarOpen"
                            class="text-gray-500 hover:text-gray-700 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-brand-primary">
                        <span class="sr-only">Open sidebar</span>
                        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                    
                    <!-- Mobile logo/title -->
                    <h1 class="text-lg font-semibold text-gray-900">
                        <%= title %>
                    </h1>
                    
                    <!-- Mobile user menu -->
                    <div x-data="{ userMenuOpen: false }" class="relative">
                        <button @click="userMenuOpen = !userMenuOpen"
                                class="flex items-center text-sm rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-primary">
                            <span class="sr-only">Open user menu</span>
                            <div class="h-8 w-8 rounded-full bg-brand-primary flex items-center justify-center">
                                <span class="text-xs font-medium text-white uppercase">
                                    <%= user ? user.username.substring(0, 2) : 'U' %>
                                </span>
                            </div>
                        </button>
                        
                        <!-- Mobile dropdown menu -->
                        <div x-show="userMenuOpen" 
                             x-transition:enter="transition ease-out duration-200"
                             x-transition:enter-start="transform opacity-0 scale-95"
                             x-transition:enter-end="transform opacity-100 scale-100"
                             x-transition:leave="transition ease-in duration-75"
                             x-transition:leave-start="transform opacity-100 scale-100"
                             x-transition:leave-end="transform opacity-0 scale-95"
                             @click.away="userMenuOpen = false"
                             class="origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 z-50"
                             style="display: none;">
                            <div class="py-1">
                                <form method="POST" action="/auth/logout">
                                    <button type="submit" class="block w-full text-left px-4 py-2 text-sm text-red-700 hover:bg-red-50">Sign out</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        
        <!-- Page content -->
        <main class="flex-1 flex flex-col">
            <!-- Page header (desktop) -->
            <div class="hidden lg:block bg-white shadow-sm border-b border-gray-200">
                <div class="px-4 sm:px-6 lg:px-8">
                    <div class="flex justify-between items-center py-4">
                        <div>
                            <h1 class="text-2xl font-bold text-gray-900"><%= title %></h1>
                            <% if (typeof subtitle !== 'undefined' && subtitle) { %>
                            <p class="mt-1 text-sm text-gray-500"><%= subtitle %></p>
                            <% } %>
                        </div>
                        
                        <!-- Desktop user menu -->
                        <div x-data="{ userMenuOpen: false }" class="relative">
                            <button @click="userMenuOpen = !userMenuOpen"
                                    class="flex items-center space-x-3 text-sm rounded-lg p-2 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-brand-primary">
                                <div class="h-8 w-8 rounded-full bg-brand-primary flex items-center justify-center">
                                    <span class="text-xs font-medium text-white uppercase">
                                        <%= user ? user.username.substring(0, 2) : 'U' %>
                                    </span>
                                </div>
                                <div class="text-left">
                                    <p class="font-medium text-gray-900"><%= user ? user.username : 'User' %></p>
                                    <p class="text-xs text-gray-500"><%= user ? user.role : 'Role' %></p>
                                </div>
                                <svg class="h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                                </svg>
                            </button>
                            
                            <!-- Desktop dropdown menu -->
                            <div x-show="userMenuOpen" 
                                 x-transition:enter="transition ease-out duration-200"
                                 x-transition:enter-start="transform opacity-0 scale-95"
                                 x-transition:enter-end="transform opacity-100 scale-100"
                                 x-transition:leave="transition ease-in duration-75"
                                 x-transition:leave-start="transform opacity-100 scale-100"
                                 x-transition:leave-end="transform opacity-0 scale-95"
                                 @click.away="userMenuOpen = false"
                                 class="origin-top-right absolute right-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 z-50"
                                 style="display: none;">
                                <div class="py-1">
                                    <div class="px-4 py-2 border-b border-gray-100">
                                        <p class="text-sm font-medium text-gray-900"><%= user ? user.email : 'user@example.com' %></p>
                                        <p class="text-xs text-gray-500">
                                            <%= user && user.role === 'SYSTEM_ADMIN' ? 'System Administrator' : 
                                                user && user.role === 'TRUST_ADMIN' ? 'Trust Administrator' : 
                                                user ? user.role : 'User Role' %>
                                        </p>
                                    </div>
                                    <div class="border-t border-gray-100"></div>
                                    <form method="POST" action="/auth/logout">
                                        <button type="submit" class="block w-full text-left px-4 py-2 text-sm text-red-700 hover:bg-red-50">
                                            <svg class="inline h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                                            </svg>
                                            Sign out
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Main page content -->
            <div class="flex-1 px-4 sm:px-6 lg:px-8 py-6">
                <%- body %>
            </div>
        </main>
    </div>
    
    <!-- Global JavaScript -->
    <script src="/static/js/app.js"></script>
    
    <!-- Global notification system -->
    <div x-data="notificationSystem()" @notify.window="show($event.detail.type, $event.detail.message)" 
         class="fixed inset-0 flex items-end justify-center px-4 py-6 pointer-events-none sm:p-6 sm:items-start sm:justify-end z-50">
        <div x-show="visible" 
             x-transition:enter="transform ease-out duration-300 transition"
             x-transition:enter-start="translate-y-2 opacity-0 sm:translate-y-0 sm:translate-x-2"
             x-transition:enter-end="translate-y-0 opacity-100 sm:translate-x-0"
             x-transition:leave="transition ease-in duration-100"
             x-transition:leave-start="opacity-100"
             x-transition:leave-end="opacity-0"
             class="max-w-sm w-full shadow-lg rounded-lg pointer-events-auto"
             :class="{
                 'bg-green-50 border border-green-200': type === 'success',
                 'bg-red-50 border border-red-200': type === 'error',
                 'bg-yellow-50 border border-yellow-200': type === 'warning',
                 'bg-blue-50 border border-blue-200': type === 'info'
             }"
             style="display: none;">
            <div class="p-4">
                <div class="flex items-start">
                    <div class="flex-shrink-0">
                        <!-- Success icon -->
                        <svg x-show="type === 'success'" class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                        <!-- Error icon -->
                        <svg x-show="type === 'error'" class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                        </svg>
                        <!-- Warning icon -->
                        <svg x-show="type === 'warning'" class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                        </svg>
                        <!-- Info icon -->
                        <svg x-show="type === 'info'" class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3 w-0 flex-1">
                        <p class="text-sm font-medium" 
                           :class="{
                               'text-green-800': type === 'success',
                               'text-red-800': type === 'error',
                               'text-yellow-800': type === 'warning',
                               'text-blue-800': type === 'info'
                           }"
                           x-text="message"></p>
                    </div>
                    <div class="ml-4 flex-shrink-0 flex">
                        <button @click="hide()" 
                                class="rounded-md inline-flex focus:outline-none focus:ring-2"
                                :class="{
                                    'text-green-400 hover:text-green-500 focus:ring-green-600': type === 'success',
                                    'text-red-400 hover:text-red-500 focus:ring-red-600': type === 'error',
                                    'text-yellow-400 hover:text-yellow-500 focus:ring-yellow-600': type === 'warning',
                                    'text-blue-400 hover:text-blue-500 focus:ring-blue-600': type === 'info'
                                }">
                            <span class="sr-only">Close</span>
                            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        // Global notification system
        function notificationSystem() {
            return {
                visible: false,
                type: 'info',
                message: '',
                
                show(type, message) {
                    this.type = type;
                    this.message = message;
                    this.visible = true;
                    
                    // Auto-hide after 5 seconds
                    setTimeout(() => {
                        this.hide();
                    }, 5000);
                },
                
                hide() {
                    this.visible = false;
                }
            }
        }
        
        // Global notify function
        window.notify = function(type, message) {
            // Dispatch custom event to trigger notification
            window.dispatchEvent(new CustomEvent('notify', {
                detail: { type, message }
            }));
        };
        
        // Close mobile menu when clicking on links
        document.addEventListener('click', function(e) {
            if (e.target.matches('a') && window.innerWidth < 1024) {
                // Close mobile sidebar
                const app = document.querySelector('[x-data*="sidebarOpen"]');
                if (app && app._x_dataStack && app._x_dataStack[0]) {
                    app._x_dataStack[0].sidebarOpen = false;
                }
            }
        });
    </script>
    
    <!-- Custom footer scripts -->
    <% if (typeof customScripts !== 'undefined') { %>
    <%- customScripts %>
    <% } %>
</body>
</html>
