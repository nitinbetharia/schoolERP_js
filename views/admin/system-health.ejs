<!-- System Health Monitoring Page -->
<div class="container mx-auto px-6 py-8">
  <!-- Page Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-red-600 flex items-center gap-3">
          <i class="<%= icons.SYSTEM_HEALTH %> text-red-500"></i>
          System Health Monitoring
        </h1>
        <p class="text-gray-600 mt-2">
          Monitor system performance, server status, and application health
        </p>
      </div>
      <div class="flex items-center gap-3">
        <button
          class="px-4 py-2 bg-blue-600 text-white rounded-lg text-sm hover:bg-blue-700 transition-colors"
        >
          <i class="fas fa-sync-alt mr-2"></i>
          Refresh Status
        </button>
      </div>
    </div>
  </div>

  <!-- System Status Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow-sm border p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-500 text-sm font-medium">Server Status</p>
          <p class="text-lg font-bold text-green-600 mt-1 flex items-center gap-2">
            <i class="fas fa-circle text-green-500 text-xs"></i>
            Online
          </p>
        </div>
        <div class="p-3 bg-green-50 rounded-lg">
          <i class="fas fa-server text-green-500 text-xl"></i>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-500 text-sm font-medium">Database</p>
          <p class="text-lg font-bold text-green-600 mt-1 flex items-center gap-2">
            <i class="fas fa-circle text-green-500 text-xs"></i>
            Connected
          </p>
        </div>
        <div class="p-3 bg-green-50 rounded-lg">
          <i class="fas fa-database text-green-500 text-xl"></i>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-500 text-sm font-medium">Memory Usage</p>
          <p class="text-lg font-bold text-yellow-600 mt-1">67%</p>
        </div>
        <div class="p-3 bg-yellow-50 rounded-lg">
          <i class="fas fa-memory text-yellow-500 text-xl"></i>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-500 text-sm font-medium">CPU Usage</p>
          <p class="text-lg font-bold text-blue-600 mt-1">23%</p>
        </div>
        <div class="p-3 bg-blue-50 rounded-lg">
          <i class="fas fa-microchip text-blue-500 text-xl"></i>
        </div>
      </div>
    </div>
  </div>

  <!-- Detailed Monitoring -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    <!-- System Metrics -->
    <div class="bg-white rounded-lg shadow-sm border">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="font-semibold flex items-center gap-2 text-gray-800">
          <i class="fas fa-chart-line text-blue-500"></i>
          System Metrics
        </h3>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Uptime</span>
            <span class="text-sm font-medium text-green-600">15 days, 3 hours</span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Active Users</span>
            <span class="text-sm font-medium text-blue-600">156</span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Total Sessions</span>
            <span class="text-sm font-medium text-purple-600">1,234</span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Disk Usage</span>
            <span class="text-sm font-medium text-orange-600">45.2 GB / 100 GB</span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Response Time</span>
            <span class="text-sm font-medium text-green-600">142ms avg</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Service Status -->
    <div class="bg-white rounded-lg shadow-sm border">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="font-semibold flex items-center gap-2 text-gray-800">
          <i class="fas fa-cogs text-blue-500"></i>
          Service Status
        </h3>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Web Server</span>
            <span class="text-sm font-medium text-green-600 flex items-center gap-2">
              <i class="fas fa-circle text-green-500 text-xs"></i>
              Running
            </span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Database Server</span>
            <span class="text-sm font-medium text-green-600 flex items-center gap-2">
              <i class="fas fa-circle text-green-500 text-xs"></i>
              Running
            </span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Email Service</span>
            <span class="text-sm font-medium text-green-600 flex items-center gap-2">
              <i class="fas fa-circle text-green-500 text-xs"></i>
              Running
            </span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Backup Service</span>
            <span class="text-sm font-medium text-yellow-600 flex items-center gap-2">
              <i class="fas fa-circle text-yellow-500 text-xs"></i>
              Scheduled
            </span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Log Service</span>
            <span class="text-sm font-medium text-green-600 flex items-center gap-2">
              <i class="fas fa-circle text-green-500 text-xs"></i>
              Running
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Events -->
  <div class="bg-white rounded-lg shadow-sm border">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="font-semibold flex items-center gap-2 text-gray-800">
        <i class="fas fa-history text-blue-500"></i>
        Recent System Events
      </h3>
    </div>
    <div class="p-6">
      <div class="space-y-4">
        <div class="flex items-center gap-4 p-3 bg-green-50 rounded-lg">
          <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
            <i class="fas fa-check text-green-500 text-sm"></i>
          </div>
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-800">System backup completed successfully</p>
            <p class="text-xs text-gray-500">Database backup created at 03:00 AM</p>
          </div>
          <span class="text-xs text-gray-400">2 hours ago</span>
        </div>

        <div class="flex items-center gap-4 p-3 bg-blue-50 rounded-lg">
          <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
            <i class="fas fa-info text-blue-500 text-sm"></i>
          </div>
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-800">Server maintenance completed</p>
            <p class="text-xs text-gray-500">Security updates applied successfully</p>
          </div>
          <span class="text-xs text-gray-400">6 hours ago</span>
        </div>

        <div class="flex items-center gap-4 p-3 bg-yellow-50 rounded-lg">
          <div class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center">
            <i class="fas fa-exclamation-triangle text-yellow-500 text-sm"></i>
          </div>
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-800">High memory usage detected</p>
            <p class="text-xs text-gray-500">Memory usage reached 85% at peak hours</p>
          </div>
          <span class="text-xs text-gray-400">1 day ago</span>
        </div>
      </div>
    </div>
  </div>
</div>
