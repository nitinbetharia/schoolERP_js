<!-- Admin Backup Management Page -->
<div class="container mx-auto px-6 py-8">
  <!-- Page Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-orange-600 flex items-center gap-3">
          <i class="<%= icons.BACKUP %> text-orange-500"></i>
          Backup Management
        </h1>
        <p class="text-gray-600 mt-2">Manage system backups, schedules, and data recovery</p>
      </div>
      <div class="flex items-center gap-3">
        <button
          class="px-4 py-2 bg-orange-600 text-white rounded-lg text-sm hover:bg-orange-700 transition-colors"
        >
          <i class="fas fa-play mr-2"></i>
          Start Backup
        </button>
        <button
          class="px-4 py-2 bg-blue-600 text-white rounded-lg text-sm hover:bg-blue-700 transition-colors"
        >
          <i class="fas fa-cog mr-2"></i>
          Schedule Settings
        </button>
      </div>
    </div>
  </div>

  <!-- Backup Status Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow-sm border p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-500 text-sm font-medium">Last Backup</p>
          <p class="text-lg font-bold text-green-600 mt-1">2 hours ago</p>
        </div>
        <div class="p-3 bg-green-50 rounded-lg">
          <i class="fas fa-check-circle text-green-500 text-xl"></i>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-500 text-sm font-medium">Backup Size</p>
          <p class="text-lg font-bold text-blue-600 mt-1">2.4 GB</p>
        </div>
        <div class="p-3 bg-blue-50 rounded-lg">
          <i class="fas fa-hdd text-blue-500 text-xl"></i>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-500 text-sm font-medium">Total Backups</p>
          <p class="text-lg font-bold text-purple-600 mt-1">45</p>
        </div>
        <div class="p-3 bg-purple-50 rounded-lg">
          <i class="fas fa-archive text-purple-500 text-xl"></i>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-500 text-sm font-medium">Next Scheduled</p>
          <p class="text-lg font-bold text-orange-600 mt-1">Tonight 3:00 AM</p>
        </div>
        <div class="p-3 bg-orange-50 rounded-lg">
          <i class="fas fa-clock text-orange-500 text-xl"></i>
        </div>
      </div>
    </div>
  </div>

  <!-- Backup Controls -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    <!-- Manual Backup -->
    <div class="bg-white rounded-lg shadow-sm border">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="font-semibold flex items-center gap-2 text-gray-800">
          <i class="fas fa-play text-blue-500"></i>
          Manual Backup
        </h3>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <div class="space-y-3">
            <label class="flex items-center">
              <input type="checkbox" class="rounded border-gray-300 text-blue-600" checked />
              <span class="ml-2 text-sm text-gray-700">Database</span>
            </label>
            <label class="flex items-center">
              <input type="checkbox" class="rounded border-gray-300 text-blue-600" checked />
              <span class="ml-2 text-sm text-gray-700">Files & Documents</span>
            </label>
            <label class="flex items-center">
              <input type="checkbox" class="rounded border-gray-300 text-blue-600" />
              <span class="ml-2 text-sm text-gray-700">System Configuration</span>
            </label>
            <label class="flex items-center">
              <input type="checkbox" class="rounded border-gray-300 text-blue-600" />
              <span class="ml-2 text-sm text-gray-700">User Data</span>
            </label>
          </div>
          <button
            class="w-full mt-4 px-4 py-2 bg-blue-600 text-white rounded-lg text-sm hover:bg-blue-700 transition-colors"
          >
            <i class="fas fa-play mr-2"></i>
            Start Manual Backup
          </button>
        </div>
      </div>
    </div>

    <!-- Schedule Settings -->
    <div class="bg-white rounded-lg shadow-sm border">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="font-semibold flex items-center gap-2 text-gray-800">
          <i class="fas fa-calendar text-green-500"></i>
          Backup Schedule
        </h3>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Frequency</label>
            <select class="w-full border border-gray-300 rounded-lg px-3 py-2 text-sm">
              <option value="daily" selected>Daily</option>
              <option value="weekly">Weekly</option>
              <option value="monthly">Monthly</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Time</label>
            <input
              type="time"
              value="03:00"
              class="w-full border border-gray-300 rounded-lg px-3 py-2 text-sm"
            />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Retention (days)</label>
            <input
              type="number"
              value="30"
              class="w-full border border-gray-300 rounded-lg px-3 py-2 text-sm"
            />
          </div>
          <button
            class="w-full mt-4 px-4 py-2 bg-green-600 text-white rounded-lg text-sm hover:bg-green-700 transition-colors"
          >
            <i class="fas fa-save mr-2"></i>
            Update Schedule
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Backup History -->
  <div class="bg-white rounded-lg shadow-sm border">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="font-semibold flex items-center gap-2 text-gray-800">
        <i class="fas fa-history text-blue-500"></i>
        Backup History
      </h3>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Date & Time
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Type
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Size
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Duration
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Status
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Actions
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">2025-08-18 03:00:00</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">Scheduled</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">2.4 GB</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">12 min</td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full"
                >Success</span
              >
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <button class="text-blue-600 hover:text-blue-900 mr-3">Download</button>
              <button class="text-green-600 hover:text-green-900 mr-3">Restore</button>
              <button class="text-red-600 hover:text-red-900">Delete</button>
            </td>
          </tr>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">2025-08-17 03:00:00</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">Scheduled</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">2.3 GB</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">11 min</td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full"
                >Success</span
              >
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <button class="text-blue-600 hover:text-blue-900 mr-3">Download</button>
              <button class="text-green-600 hover:text-green-900 mr-3">Restore</button>
              <button class="text-red-600 hover:text-red-900">Delete</button>
            </td>
          </tr>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">2025-08-16 15:30:00</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">Manual</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">1.8 GB</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">8 min</td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full"
                >Success</span
              >
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <button class="text-blue-600 hover:text-blue-900 mr-3">Download</button>
              <button class="text-green-600 hover:text-green-900 mr-3">Restore</button>
              <button class="text-red-600 hover:text-red-900">Delete</button>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
