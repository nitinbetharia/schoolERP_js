<script>
document.addEventListener('DOMContentLoaded', function() {
    initializeGatewayToggles();
    loadPaymentStats();
});

function initializeGatewayToggles() {
    const gatewayToggles = document.querySelectorAll('.gateway-config input[name="enabled_gateways"]');
    
    gatewayToggles.forEach(toggle => {
        // Set initial state
        updateGatewayVisibility(toggle);
        
        // Add event listener
        toggle.addEventListener('change', function() {
            updateGatewayVisibility(this);
        });
    });
}

function updateGatewayVisibility(toggle) {
    const gatewayConfig = toggle.closest('.gateway-config');
    
    if (toggle.checked) {
        gatewayConfig.classList.add('active');
    } else {
        gatewayConfig.classList.remove('active');
    }
}

function testGateway(gatewayName) {
    const button = event.target;
    const originalText = button.innerHTML;
    
    button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Testing...';
    button.disabled = true;
    
    // Get gateway configuration
    const gatewayConfig = document.querySelector(`[data-gateway="${gatewayName}"]`);
    const formData = new FormData(document.getElementById('gateway-config-form'));
    
    const testData = {
        gateway: gatewayName,
        config: {}
    };
    
    // Extract gateway-specific config
    for (let [key, value] of formData.entries()) {
        if (key.startsWith(gatewayName.toLowerCase())) {
            testData.config[key] = value;
        }
    }
    
    fetch('/api/admin/payment-gateways/test', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify(testData)
    })
    .then(response => response.json())
    .then(data => {
        showTestResult(gatewayName, data);
    })
    .catch(error => {
        console.error('Test error:', error);
        showTestResult(gatewayName, { success: false, message: 'Test failed' });
    })
    .finally(() => {
        button.innerHTML = originalText;
        button.disabled = false;
    });
}

function testAllGateways() {
    const enabledGateways = Array.from(document.querySelectorAll('input[name="enabled_gateways"]:checked'))
        .map(input => input.value);
    
    if (enabledGateways.length === 0) {
        alert('No gateways enabled for testing');
        return;
    }
    
    enabledGateways.forEach(gateway => {
        setTimeout(() => testGateway(gateway), 500);
    });
}

function showTestResult(gateway, result) {
    const modalBody = document.getElementById('test-result-body');
    
    modalBody.innerHTML = `
        <div class="test-result ${result.success ? 'success' : 'error'}">
            <div class="result-header">
                <h4>${gateway} Test Result</h4>
                <div class="result-status">
                    <i class="fas ${result.success ? 'fa-check-circle' : 'fa-times-circle'}"></i>
                    ${result.success ? 'Success' : 'Failed'}
                </div>
            </div>
            <div class="result-body">
                <p>${result.message}</p>
                ${result.details ? `<pre>${JSON.stringify(result.details, null, 2)}</pre>` : ''}
            </div>
        </div>
    `;
    
    const modal = new bootstrap.Modal(document.getElementById('test-result-modal'));
    modal.show();
}

function saveConfiguration() {
    const form = document.getElementById('gateway-config-form');
    const formData = new FormData(form);
    
    const configData = {};
    
    // Process form data
    for (let [key, value] of formData.entries()) {
        if (key === 'enabled_gateways' || key === 'enabled_payment_methods') {
            if (!configData[key]) configData[key] = [];
            configData[key].push(value);
        } else if (key.includes('_mode') || key === 'enable_online_payments') {
            configData[key] = true;
        } else {
            configData[key] = value;
        }
    }
    
    // Add unchecked checkboxes as false
    const checkboxes = form.querySelectorAll('input[type="checkbox"]');
    checkboxes.forEach(checkbox => {
        if (!checkbox.checked && !checkbox.name.includes('gateways') && !checkbox.name.includes('methods')) {
            configData[checkbox.name] = false;
        }
    });
    
    const saveButton = event.target;
    const originalText = saveButton.innerHTML;
    
    saveButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Saving...';
    saveButton.disabled = true;
    
    fetch('/api/admin/payment-gateways/config', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify(configData)
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('Configuration saved successfully!');
        } else {
            alert('Failed to save configuration: ' + data.message);
        }
    })
    .catch(error => {
        console.error('Save error:', error);
        alert('Error saving configuration');
    })
    .finally(() => {
        saveButton.innerHTML = originalText;
        saveButton.disabled = false;
    });
}

function loadPaymentStats() {
    fetch('/api/admin/payment-stats')
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                updateStats(data.stats);
            }
        })
        .catch(error => {
            console.error('Error loading stats:', error);
        });
}

function updateStats(stats) {
    document.getElementById('success-rate').textContent = stats.successRate + '%';
    document.getElementById('pending-transactions').textContent = stats.pendingTransactions;
    document.getElementById('monthly-revenue').textContent = '₹' + stats.monthlyRevenue.toLocaleString('en-IN');
    document.getElementById('failed-transactions').textContent = stats.failedTransactions;
}
</script>

