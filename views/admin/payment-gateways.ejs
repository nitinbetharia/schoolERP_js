<%- include('../../partials/header') %>

<div class="gateway-config-container">
    <div class="page-header">
        <h1 class="page-title">
            <i class="fas fa-credit-card"></i>
            Payment Gateway Configuration
        </h1>
        <div class="header-actions">
            <button class="btn btn-outline-primary" onclick="testAllGateways()">
                <i class="fas fa-play-circle"></i> Test All
            </button>
            <button class="btn btn-primary" onclick="saveConfiguration()">
                <i class="fas fa-save"></i> Save Configuration
            </button>
        </div>
    </div>

    <!-- Configuration Form -->
    <form id="gateway-config-form" class="config-form">
        <!-- General Settings -->
        <div class="config-section">
            <div class="section-header">
                <h2><i class="fas fa-cog"></i> General Payment Settings</h2>
            </div>
            <div class="section-body">
                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">
                            <input type="checkbox" id="enable_online_payments" name="enable_online_payments" 
                                   <%= config.enable_online_payments ? 'checked' : '' %>>
                            Enable Online Payments
                        </label>
                        <small class="form-text">Allow students to pay fees online through payment gateways</small>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="online_fee_percentage">Online Payment Convenience Fee (%)</label>
                        <input type="number" id="online_fee_percentage" name="online_fee_percentage" 
                               value="<%= config.online_fee_percentage || 0 %>" 
                               min="0" max="10" step="0.1" class="form-control">
                        <small class="form-text">Percentage fee charged for online payments (0-10%)</small>
                    </div>
                    
                    <div class="form-group">
                        <label for="online_fee_fixed">Fixed Convenience Fee (₹)</label>
                        <input type="number" id="online_fee_fixed" name="online_fee_fixed" 
                               value="<%= config.online_fee_fixed || 0 %>" 
                               min="0" step="1" class="form-control">
                        <small class="form-text">Fixed fee amount added to online payments</small>
                    </div>
                </div>

                <div class="form-group">
                    <label>Enabled Payment Methods</label>
                    <div class="checkbox-grid">
                        <% const methods = ['CASH', 'CHEQUE', 'BANK_TRANSFER', 'UPI', 'ONLINE', 'CARD']; %>
                        <% methods.forEach(method => { %>
                            <label class="checkbox-item">
                                <input type="checkbox" name="enabled_payment_methods" value="<%= method %>"
                                       <%= (config.enabled_payment_methods || []).includes(method) ? 'checked' : '' %>>
                                <span class="checkbox-label"><%= method.replace('_', ' ') %></span>
                            </label>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Gateway Configurations -->
        <div class="config-section">
            <div class="section-header">
                <h2><i class="fas fa-globe"></i> Payment Gateway Settings</h2>
            </div>

            <!-- Razorpay Configuration -->
            <div class="gateway-config" data-gateway="RAZORPAY">
                <div class="gateway-header">
                    <div class="gateway-info">
                        <img src="/images/gateways/razorpay.png" alt="Razorpay" class="gateway-logo">
                        <div class="gateway-details">
                            <h3>Razorpay</h3>
                            <p>Popular payment gateway with UPI, Cards, Net Banking support</p>
                        </div>
                    </div>
                    <div class="gateway-toggle">
                        <label class="switch">
                            <input type="checkbox" name="enabled_gateways" value="RAZORPAY"
                                   <%= (config.enabled_gateways || []).includes('RAZORPAY') ? 'checked' : '' %>>
                            <span class="slider"></span>
                        </label>
                    </div>
                </div>
                
                <div class="gateway-body">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="razorpay_key_id">Key ID *</label>
                            <input type="text" id="razorpay_key_id" name="razorpay_key_id" 
                                   value="<%= config.razorpay_key_id || '' %>" 
                                   placeholder="rzp_test_xxxxxxxxxxxx" class="form-control">
                            <small class="form-text">Your Razorpay Key ID from dashboard</small>
                        </div>
                        
                        <div class="form-group">
                            <label for="razorpay_key_secret">Key Secret *</label>
                            <input type="password" id="razorpay_key_secret" name="razorpay_key_secret" 
                                   value="<%= config.razorpay_key_secret || '' %>" 
                                   placeholder="Enter key secret" class="form-control">
                            <small class="form-text">Your Razorpay Key Secret (keep confidential)</small>
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">
                                <input type="checkbox" name="razorpay_test_mode" 
                                       <%= config.razorpay_test_mode !== false ? 'checked' : '' %>>
                                Test Mode
                            </label>
                            <small class="form-text">Enable for testing with sample transactions</small>
                        </div>
                    </div>
                    
                    <div class="gateway-actions">
                        <button type="button" class="btn btn-outline-primary" onclick="testGateway('RAZORPAY')">
                            <i class="fas fa-vial"></i> Test Connection
                        </button>
                        <a href="https://dashboard.razorpay.com" target="_blank" class="btn btn-outline-secondary">
                            <i class="fas fa-external-link-alt"></i> Dashboard
                        </a>
                    </div>
                </div>
            </div>

            <!-- Paytm Configuration -->
            <div class="gateway-config" data-gateway="PAYTM">
                <div class="gateway-header">
                    <div class="gateway-info">
                        <img src="/images/gateways/paytm.png" alt="Paytm" class="gateway-logo">
                        <div class="gateway-details">
                            <h3>Paytm</h3>
                            <p>Leading wallet and payment gateway in India</p>
                        </div>
                    </div>
                    <div class="gateway-toggle">
                        <label class="switch">
                            <input type="checkbox" name="enabled_gateways" value="PAYTM"
                                   <%= (config.enabled_gateways || []).includes('PAYTM') ? 'checked' : '' %>>
                            <span class="slider"></span>
                        </label>
                    </div>
                </div>
                
                <div class="gateway-body">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="paytm_merchant_id">Merchant ID *</label>
                            <input type="text" id="paytm_merchant_id" name="paytm_merchant_id" 
                                   value="<%= config.paytm_merchant_id || '' %>" 
                                   placeholder="Enter merchant ID" class="form-control">
                        </div>
                        
                        <div class="form-group">
                            <label for="paytm_merchant_key">Merchant Key *</label>
                            <input type="password" id="paytm_merchant_key" name="paytm_merchant_key" 
                                   value="<%= config.paytm_merchant_key || '' %>" 
                                   placeholder="Enter merchant key" class="form-control">
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">
                                <input type="checkbox" name="paytm_test_mode" 
                                       <%= config.paytm_test_mode !== false ? 'checked' : '' %>>
                                Test Mode
                            </label>
                        </div>
                    </div>
                    
                    <div class="gateway-actions">
                        <button type="button" class="btn btn-outline-primary" onclick="testGateway('PAYTM')">
                            <i class="fas fa-vial"></i> Test Connection
                        </button>
                        <a href="https://business.paytm.com" target="_blank" class="btn btn-outline-secondary">
                            <i class="fas fa-external-link-alt"></i> Dashboard
                        </a>
                    </div>
                </div>
            </div>

            <!-- PayU Configuration -->
            <div class="gateway-config" data-gateway="PAYU">
                <div class="gateway-header">
                    <div class="gateway-info">
                        <img src="/images/gateways/payu.png" alt="PayU" class="gateway-logo">
                        <div class="gateway-details">
                            <h3>PayU</h3>
                            <p>Comprehensive payment solutions for businesses</p>
                        </div>
                    </div>
                    <div class="gateway-toggle">
                        <label class="switch">
                            <input type="checkbox" name="enabled_gateways" value="PAYU"
                                   <%= (config.enabled_gateways || []).includes('PAYU') ? 'checked' : '' %>>
                            <span class="slider"></span>
                        </label>
                    </div>
                </div>
                
                <div class="gateway-body">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="payu_merchant_key">Merchant Key *</label>
                            <input type="text" id="payu_merchant_key" name="payu_merchant_key" 
                                   value="<%= config.payu_merchant_key || '' %>" 
                                   placeholder="Enter merchant key" class="form-control">
                        </div>
                        
                        <div class="form-group">
                            <label for="payu_salt">Salt *</label>
                            <input type="password" id="payu_salt" name="payu_salt" 
                                   value="<%= config.payu_salt || '' %>" 
                                   placeholder="Enter salt" class="form-control">
                        </div>
                    </div>
                    
                    <div class="gateway-actions">
                        <button type="button" class="btn btn-outline-primary" onclick="testGateway('PAYU')">
                            <i class="fas fa-vial"></i> Test Connection
                        </button>
                        <a href="https://www.payu.in" target="_blank" class="btn btn-outline-secondary">
                            <i class="fas fa-external-link-alt"></i> Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Analytics & Monitoring -->
        <div class="config-section">
            <div class="section-header">
                <h2><i class="fas fa-chart-bar"></i> Analytics & Monitoring</h2>
            </div>
            <div class="section-body">
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-icon success">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <div class="stat-content">
                            <div class="stat-title">Success Rate</div>
                            <div class="stat-value" id="success-rate">--%</div>
                        </div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-icon pending">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div class="stat-content">
                            <div class="stat-title">Pending Transactions</div>
                            <div class="stat-value" id="pending-transactions">--</div>
                        </div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-icon revenue">
                            <i class="fas fa-rupee-sign"></i>
                        </div>
                        <div class="stat-content">
                            <div class="stat-title">Monthly Revenue</div>
                            <div class="stat-value" id="monthly-revenue">₹--</div>
                        </div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-icon failed">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <div class="stat-content">
                            <div class="stat-title">Failed Transactions</div>
                            <div class="stat-value" id="failed-transactions">--</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<!-- Test Result Modal -->
<div class="modal fade" id="test-result-modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Gateway Test Result</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="test-result-body">
                <!-- Test results will be loaded here -->
            </div>
        </div>
    </div>
</div>

