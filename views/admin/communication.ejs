<!-- Admin Communication Management Page -->
<div class="container mx-auto px-6 py-8">
  <!-- Page Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-indigo-600 flex items-center gap-3">
          <i class="<%= icons.COMMUNICATION %> text-indigo-500"></i>
          Communication Management
        </h1>
        <p class="text-gray-600 mt-2">
          Manage email templates, SMS settings, and communication history
        </p>
      </div>
      <div class="flex items-center gap-3">
        <button
          class="px-4 py-2 bg-indigo-600 text-white rounded-lg text-sm hover:bg-indigo-700 transition-colors"
        >
          <i class="fas fa-plus mr-2"></i>
          New Message
        </button>
        <a
          href="/communication/setup"
          class="px-4 py-2 bg-gray-600 text-white rounded-lg text-sm hover:bg-gray-700 transition-colors"
        >
          <i class="fas fa-cog mr-2"></i>
          Settings
        </a>
      </div>
    </div>
  </div>

  <!-- Communication Stats -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow-sm border p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-500 text-sm font-medium">Emails Sent</p>
          <p class="text-2xl font-bold text-blue-600 mt-1">1,234</p>
        </div>
        <div class="p-3 bg-blue-50 rounded-lg">
          <i class="fas fa-envelope text-blue-500 text-xl"></i>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-500 text-sm font-medium">SMS Sent</p>
          <p class="text-2xl font-bold text-green-600 mt-1">567</p>
        </div>
        <div class="p-3 bg-green-50 rounded-lg">
          <i class="fas fa-sms text-green-500 text-xl"></i>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-500 text-sm font-medium">Templates</p>
          <p class="text-2xl font-bold text-purple-600 mt-1">23</p>
        </div>
        <div class="p-3 bg-purple-50 rounded-lg">
          <i class="fas fa-file-alt text-purple-500 text-xl"></i>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-500 text-sm font-medium">Active Campaigns</p>
          <p class="text-2xl font-bold text-orange-600 mt-1">5</p>
        </div>
        <div class="p-3 bg-orange-50 rounded-lg">
          <i class="fas fa-bullhorn text-orange-500 text-xl"></i>
        </div>
      </div>
    </div>
  </div>

  <!-- Communication Sections -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    <!-- Email Management -->
    <div class="bg-white rounded-lg shadow-sm border">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="font-semibold flex items-center gap-2 text-gray-800">
          <i class="fas fa-envelope text-blue-500"></i>
          Email Management
        </h3>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <button
            class="w-full flex items-center justify-between p-3 bg-blue-50 rounded-lg hover:bg-blue-100 transition-colors"
          >
            <div class="flex items-center gap-3">
              <i class="fas fa-paper-plane text-blue-500"></i>
              <span class="text-sm font-medium text-blue-700">Send Bulk Email</span>
            </div>
            <i class="fas fa-arrow-right text-blue-500"></i>
          </button>

          <button
            class="w-full flex items-center justify-between p-3 bg-green-50 rounded-lg hover:bg-green-100 transition-colors"
          >
            <div class="flex items-center gap-3">
              <i class="fas fa-file-alt text-green-500"></i>
              <span class="text-sm font-medium text-green-700">Email Templates</span>
            </div>
            <i class="fas fa-arrow-right text-green-500"></i>
          </button>

          <button
            class="w-full flex items-center justify-between p-3 bg-purple-50 rounded-lg hover:bg-purple-100 transition-colors"
          >
            <div class="flex items-center gap-3">
              <i class="fas fa-history text-purple-500"></i>
              <span class="text-sm font-medium text-purple-700">Email History</span>
            </div>
            <i class="fas fa-arrow-right text-purple-500"></i>
          </button>
        </div>
      </div>
    </div>

    <!-- SMS Management -->
    <div class="bg-white rounded-lg shadow-sm border">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="font-semibold flex items-center gap-2 text-gray-800">
          <i class="fas fa-sms text-green-500"></i>
          SMS Management
        </h3>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <button
            class="w-full flex items-center justify-between p-3 bg-green-50 rounded-lg hover:bg-green-100 transition-colors"
          >
            <div class="flex items-center gap-3">
              <i class="fas fa-paper-plane text-green-500"></i>
              <span class="text-sm font-medium text-green-700">Send Bulk SMS</span>
            </div>
            <i class="fas fa-arrow-right text-green-500"></i>
          </button>

          <button
            class="w-full flex items-center justify-between p-3 bg-blue-50 rounded-lg hover:bg-blue-100 transition-colors"
          >
            <div class="flex items-center gap-3">
              <i class="fas fa-file-alt text-blue-500"></i>
              <span class="text-sm font-medium text-blue-700">SMS Templates</span>
            </div>
            <i class="fas fa-arrow-right text-blue-500"></i>
          </button>

          <button
            class="w-full flex items-center justify-between p-3 bg-orange-50 rounded-lg hover:bg-orange-100 transition-colors"
          >
            <div class="flex items-center gap-3">
              <i class="fas fa-chart-bar text-orange-500"></i>
              <span class="text-sm font-medium text-orange-700">SMS Analytics</span>
            </div>
            <i class="fas fa-arrow-right text-orange-500"></i>
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Communication History -->
  <div class="bg-white rounded-lg shadow-sm border">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="font-semibold flex items-center gap-2 text-gray-800">
        <i class="fas fa-history text-blue-500"></i>
        Recent Communications
      </h3>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Type
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Subject
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Recipients
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Sent By
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Date
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Status
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded-full"
                >Email</span
              >
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
              Fee Payment Reminder
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">145 Parents</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">Admin User</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">2025-08-18</td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full"
                >Delivered</span
              >
            </td>
          </tr>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full"
                >SMS</span
              >
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
              Exam Schedule Update
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">230 Students</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">School Admin</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">2025-08-17</td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full"
                >Delivered</span
              >
            </td>
          </tr>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded-full"
                >Email</span
              >
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
              Welcome New Students
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">25 Students</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">Admin User</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">2025-08-16</td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 py-1 text-xs font-medium bg-yellow-100 text-yellow-800 rounded-full"
                >Pending</span
              >
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
