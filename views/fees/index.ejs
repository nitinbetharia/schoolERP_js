<!-- Fee Management Page -->
<div class="container mx-auto px-6 py-8">
  <!-- Page Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-blue-600 flex items-center gap-3">
          <i class="<%= icons.fees %> text-yellow-500"></i>
          Fee Management
        </h1>
        <p class="text-gray-600 mt-2">Manage fee structures, collections, and payment tracking</p>
      </div>
      <div class="flex items-center gap-3">
        <a
          href="/fees/collection"
          class="px-4 py-2 bg-blue-600 text-white rounded-lg text-sm hover:bg-blue-700 transition-colors"
        >
          <i class="fas fa-plus mr-2"></i>
          Collect Fee
        </a>
        <a
          href="/fees/structures"
          class="px-4 py-2 bg-green-600 text-white rounded-lg text-sm hover:bg-green-700 transition-colors"
        >
          <i class="fas fa-cog mr-2"></i>
          Fee Structures
        </a>
      </div>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow-sm border p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-500 text-sm font-medium">Total Collection</p>
          <p class="text-2xl font-bold text-green-600 mt-1">₹2,45,000</p>
        </div>
        <div class="p-3 bg-green-50 rounded-lg">
          <i class="fas fa-rupee-sign text-green-500 text-xl"></i>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-500 text-sm font-medium">Pending Amount</p>
          <p class="text-2xl font-bold text-orange-600 mt-1">₹45,000</p>
        </div>
        <div class="p-3 bg-orange-50 rounded-lg">
          <i class="fas fa-clock text-orange-500 text-xl"></i>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-500 text-sm font-medium">Students Paid</p>
          <p class="text-2xl font-bold text-blue-600 mt-1">425</p>
        </div>
        <div class="p-3 bg-blue-50 rounded-lg">
          <i class="fas fa-users text-blue-500 text-xl"></i>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-500 text-sm font-medium">Overdue</p>
          <p class="text-2xl font-bold text-red-600 mt-1">23</p>
        </div>
        <div class="p-3 bg-red-50 rounded-lg">
          <i class="fas fa-exclamation-triangle text-red-500 text-xl"></i>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow-sm border p-6">
      <h3 class="font-semibold text-gray-800 mb-4">Quick Actions</h3>
      <div class="space-y-3">
        <a
          href="/fees/collection"
          class="flex items-center p-3 bg-blue-50 rounded-lg hover:bg-blue-100 transition-colors"
        >
          <i class="fas fa-plus text-blue-500 mr-3"></i>
          <span class="text-sm font-medium text-blue-700">Collect Fee Payment</span>
        </a>
        <a
          href="/fees/receipts"
          class="flex items-center p-3 bg-green-50 rounded-lg hover:bg-green-100 transition-colors"
        >
          <i class="fas fa-receipt text-green-500 mr-3"></i>
          <span class="text-sm font-medium text-green-700">Generate Receipt</span>
        </a>
        <a
          href="/fees/defaulters"
          class="flex items-center p-3 bg-red-50 rounded-lg hover:bg-red-100 transition-colors"
        >
          <i class="fas fa-exclamation-circle text-red-500 mr-3"></i>
          <span class="text-sm font-medium text-red-700">View Defaulters</span>
        </a>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border p-6">
      <h3 class="font-semibold text-gray-800 mb-4">Recent Collections</h3>
      <div class="space-y-3">
        <div class="flex items-center justify-between p-2 border-b">
          <div>
            <p class="text-sm font-medium">John Doe - Class 10A</p>
            <p class="text-xs text-gray-500">Tuition Fee</p>
          </div>
          <span class="text-sm font-bold text-green-600">₹5,000</span>
        </div>
        <div class="flex items-center justify-between p-2 border-b">
          <div>
            <p class="text-sm font-medium">Jane Smith - Class 9B</p>
            <p class="text-xs text-gray-500">Annual Fee</p>
          </div>
          <span class="text-sm font-bold text-green-600">₹12,000</span>
        </div>
        <div class="flex items-center justify-between p-2">
          <div>
            <p class="text-sm font-medium">Mike Johnson - Class 8A</p>
            <p class="text-xs text-gray-500">Transport Fee</p>
          </div>
          <span class="text-sm font-bold text-green-600">₹3,000</span>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border p-6">
      <h3 class="font-semibold text-gray-800 mb-4">Fee Structures</h3>
      <div class="space-y-3">
        <div class="flex items-center justify-between p-2 border-b">
          <span class="text-sm">Tuition Fee</span>
          <span class="text-sm font-medium">₹5,000/month</span>
        </div>
        <div class="flex items-center justify-between p-2 border-b">
          <span class="text-sm">Annual Fee</span>
          <span class="text-sm font-medium">₹15,000/year</span>
        </div>
        <div class="flex items-center justify-between p-2 border-b">
          <span class="text-sm">Transport Fee</span>
          <span class="text-sm font-medium">₹3,000/month</span>
        </div>
        <div class="flex items-center justify-between p-2">
          <span class="text-sm">Lab Fee</span>
          <span class="text-sm font-medium">₹2,000/year</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Fee Collection Table -->
  <div class="bg-white rounded-lg shadow-sm border">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="font-semibold flex items-center gap-2 text-gray-800">
        <i class="fas fa-table text-blue-500"></i>
        Recent Fee Transactions
      </h3>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Student
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Class
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Fee Type
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Amount
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Date
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Status
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">John Doe</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">10-A</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">Tuition Fee</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">₹5,000</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">2025-08-18</td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full"
                >Paid</span
              >
            </td>
          </tr>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
              Jane Smith
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">9-B</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">Annual Fee</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">₹12,000</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">2025-08-17</td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full"
                >Paid</span
              >
            </td>
          </tr>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
              Mike Johnson
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">8-A</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">Transport Fee</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">₹3,000</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">2025-08-15</td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 py-1 text-xs font-medium bg-yellow-100 text-yellow-800 rounded-full"
                >Pending</span
              >
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
