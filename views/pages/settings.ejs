<!-- System Settings Management -->
<main class="main-content">
    <!-- Page Header -->
    <div class="page-header">
        <div class="header-content">
            <nav class="breadcrumb">
                <a href="/dashboard" class="breadcrumb-link">
                    <i class="fas fa-home"></i>
                    Dashboard
                </a>
                <span class="breadcrumb-separator">/</span>
                <span class="breadcrumb-current">Settings</span>
            </nav>
            
            <h1 class="page-title">System Settings</h1>
            <p class="page-description">Configure system preferences and manage application settings</p>
        </div>
        
        <div class="header-actions">
            <button class="btn btn-outline" onclick="exportSettings()">
                <i class="fas fa-download"></i>
                Export Settings
            </button>
            <button class="btn btn-secondary" onclick="resetToDefaults()">
                <i class="fas fa-undo"></i>
                Reset Defaults
            </button>
        </div>
    </div>

    <!-- Settings Container -->
    <div class="settings-container">
        <!-- Settings Sidebar -->
        <div class="settings-sidebar">
            <div class="settings-nav">
                <button class="nav-item active" onclick="showSettingsSection('general')">
                    <i class="fas fa-cog"></i>
                    General Settings
                </button>
                <button class="nav-item" onclick="showSettingsSection('academic')">
                    <i class="fas fa-graduation-cap"></i>
                    Academic Year
                </button>
                <button class="nav-item" onclick="showSettingsSection('notifications')">
                    <i class="fas fa-bell"></i>
                    Notifications
                </button>
                <button class="nav-item" onclick="showSettingsSection('security')">
                    <i class="fas fa-shield-alt"></i>
                    Security
                </button>
                <button class="nav-item" onclick="showSettingsSection('email')">
                    <i class="fas fa-envelope"></i>
                    Email Configuration
                </button>
                <button class="nav-item" onclick="showSettingsSection('backup')">
                    <i class="fas fa-database"></i>
                    Backup & Storage
                </button>
                <button class="nav-item" onclick="showSettingsSection('integrations')">
                    <i class="fas fa-plug"></i>
                    Integrations
                </button>
                <button class="nav-item" onclick="showSettingsSection('advanced')">
                    <i class="fas fa-tools"></i>
                    Advanced
                </button>
            </div>
        </div>

        <!-- Settings Content -->
        <div class="settings-content">
            <!-- General Settings Section -->
            <div id="generalSection" class="settings-section active">
                <div class="section-header">
                    <h3>General Settings</h3>
                </div>
                
                <form id="generalForm" class="settings-form" onsubmit="saveGeneralSettings(event)">
                    <div class="setting-group">
                        <h4>School Information</h4>
                        <div class="form-grid">
                            <div class="form-group">
                                <label for="schoolName">School Name</label>
                                <input type="text" id="schoolName" name="schoolName" class="form-control" 
                                       value="<%= settings.schoolName || 'Demo School' %>" required>
                            </div>
                            
                            <div class="form-group">
                                <label for="schoolCode">School Code</label>
                                <input type="text" id="schoolCode" name="schoolCode" class="form-control" 
                                       value="<%= settings.schoolCode || 'SCH001' %>" required>
                            </div>
                            
                            <div class="form-group">
                                <label for="principalName">Principal Name</label>
                                <input type="text" id="principalName" name="principalName" class="form-control" 
                                       value="<%= settings.principalName || '' %>">
                            </div>
                            
                            <div class="form-group">
                                <label for="contactEmail">Contact Email</label>
                                <input type="email" id="contactEmail" name="contactEmail" class="form-control" 
                                       value="<%= settings.contactEmail || '' %>">
                            </div>
                            
                            <div class="form-group">
                                <label for="contactPhone">Contact Phone</label>
                                <input type="tel" id="contactPhone" name="contactPhone" class="form-control" 
                                       value="<%= settings.contactPhone || '' %>">
                            </div>
                            
                            <div class="form-group">
                                <label for="website">Website</label>
                                <input type="url" id="website" name="website" class="form-control" 
                                       value="<%= settings.website || '' %>" placeholder="https://">
                            </div>
                            
                            <div class="form-group full-width">
                                <label for="schoolAddress">School Address</label>
                                <textarea id="schoolAddress" name="schoolAddress" class="form-control" 
                                          rows="3"><%= settings.schoolAddress || '' %></textarea>
                            </div>
                        </div>
                    </div>
                    
                    <div class="setting-group">
                        <h4>System Preferences</h4>
                        <div class="form-grid">
                            <div class="form-group">
                                <label for="timeZone">Time Zone</label>
                                <select id="timeZone" name="timeZone" class="form-control">
                                    <option value="Asia/Kolkata" <%= (settings.timeZone === 'Asia/Kolkata' || !settings.timeZone) ? 'selected' : '' %>>India Standard Time</option>
                                    <option value="UTC" <%= settings.timeZone === 'UTC' ? 'selected' : '' %>>UTC</option>
                                </select>
                            </div>
                            
                            <div class="form-group">
                                <label for="dateFormat">Date Format</label>
                                <select id="dateFormat" name="dateFormat" class="form-control">
                                    <option value="DD/MM/YYYY" <%= (settings.dateFormat === 'DD/MM/YYYY' || !settings.dateFormat) ? 'selected' : '' %>>DD/MM/YYYY</option>
                                    <option value="MM/DD/YYYY" <%= settings.dateFormat === 'MM/DD/YYYY' ? 'selected' : '' %>>MM/DD/YYYY</option>
                                    <option value="YYYY-MM-DD" <%= settings.dateFormat === 'YYYY-MM-DD' ? 'selected' : '' %>>YYYY-MM-DD</option>
                                </select>
                            </div>
                            
                            <div class="form-group">
                                <label for="currency">Currency</label>
                                <select id="currency" name="currency" class="form-control">
                                    <option value="INR" <%= (settings.currency === 'INR' || !settings.currency) ? 'selected' : '' %>>Indian Rupee (₹)</option>
                                    <option value="USD" <%= settings.currency === 'USD' ? 'selected' : '' %>>US Dollar ($)</option>
                                </select>
                            </div>
                            
                            <div class="form-group">
                                <label for="language">Default Language</label>
                                <select id="language" name="language" class="form-control">
                                    <option value="en" <%= (settings.language === 'en' || !settings.language) ? 'selected' : '' %>>English</option>
                                    <option value="hi" <%= settings.language === 'hi' ? 'selected' : '' %>>हिन्दी</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-actions">
                        <button type="submit" class="btn btn-brand-primary">
                            <i class="fas fa-save"></i>
                            Save Changes
                        </button>
                    </div>
                </form>
            </div>

            <!-- Academic Year Settings Section -->
            <div id="academicSection" class="settings-section">
                <div class="section-header">
                    <h3>Academic Year Configuration</h3>
                </div>
                
                <form id="academicForm" class="settings-form" onsubmit="saveAcademicSettings(event)">
                    <div class="setting-group">
                        <h4>Current Academic Year</h4>
                        <div class="form-grid">
                            <div class="form-group">
                                <label for="academicYear">Academic Year</label>
                                <input type="text" id="academicYear" name="academicYear" class="form-control" 
                                       value="<%= settings.academicYear || '2024-25' %>" required>
                            </div>
                            
                            <div class="form-group">
                                <label for="academicStartDate">Session Start Date</label>
                                <input type="date" id="academicStartDate" name="academicStartDate" class="form-control" 
                                       value="<%= settings.academicStartDate || '' %>" required>
                            </div>
                            
                            <div class="form-group">
                                <label for="academicEndDate">Session End Date</label>
                                <input type="date" id="academicEndDate" name="academicEndDate" class="form-control" 
                                       value="<%= settings.academicEndDate || '' %>" required>
                            </div>
                        </div>
                    </div>
                    
                    <div class="setting-group">
                        <h4>Term Configuration</h4>
                        <div id="termsContainer">
                            <div class="term-item">
                                <h5>Term 1</h5>
                                <div class="form-grid">
                                    <div class="form-group">
                                        <label>Start Date</label>
                                        <input type="date" name="term1Start" class="form-control" value="<%= settings.term1Start || '' %>">
                                    </div>
                                    <div class="form-group">
                                        <label>End Date</label>
                                        <input type="date" name="term1End" class="form-control" value="<%= settings.term1End || '' %>">
                                    </div>
                                </div>
                            </div>
                            
                            <div class="term-item">
                                <h5>Term 2</h5>
                                <div class="form-grid">
                                    <div class="form-group">
                                        <label>Start Date</label>
                                        <input type="date" name="term2Start" class="form-control" value="<%= settings.term2Start || '' %>">
                                    </div>
                                    <div class="form-group">
                                        <label>End Date</label>
                                        <input type="date" name="term2End" class="form-control" value="<%= settings.term2End || '' %>">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-actions">
                        <button type="submit" class="btn btn-brand-primary">
                            <i class="fas fa-save"></i>
                            Save Academic Settings
                        </button>
                    </div>
                </form>
            </div>

            <!-- Notification Settings Section -->
            <div id="notificationsSection" class="settings-section">
                <div class="section-header">
                    <h3>Notification Settings</h3>
                </div>
                
                <form id="notificationsForm" class="settings-form" onsubmit="saveNotificationSettings(event)">
                    <div class="setting-group">
                        <h4>Email Notifications</h4>
                        <div class="notification-options">
                            <label class="checkbox-label">
                                <input type="checkbox" name="emailStudentAdmission" 
                                       <%= (settings.emailStudentAdmission !== false) ? 'checked' : '' %>>
                                <span>Student admission notifications</span>
                            </label>
                            <label class="checkbox-label">
                                <input type="checkbox" name="emailFeeReminders" 
                                       <%= (settings.emailFeeReminders !== false) ? 'checked' : '' %>>
                                <span>Fee payment reminders</span>
                            </label>
                            <label class="checkbox-label">
                                <input type="checkbox" name="emailAttendanceAlerts" 
                                       <%= (settings.emailAttendanceAlerts !== false) ? 'checked' : '' %>>
                                <span>Low attendance alerts</span>
                            </label>
                            <label class="checkbox-label">
                                <input type="checkbox" name="emailExamResults" 
                                       <%= (settings.emailExamResults !== false) ? 'checked' : '' %>>
                                <span>Exam result notifications</span>
                            </label>
                        </div>
                    </div>
                    
                    <div class="setting-group">
                        <h4>SMS Notifications</h4>
                        <div class="notification-options">
                            <label class="checkbox-label">
                                <input type="checkbox" name="smsAbsentAlerts" 
                                       <%= settings.smsAbsentAlerts ? 'checked' : '' %>>
                                <span>Daily absence alerts to parents</span>
                            </label>
                            <label class="checkbox-label">
                                <input type="checkbox" name="smsFeeReminders" 
                                       <%= settings.smsFeeReminders ? 'checked' : '' %>>
                                <span>SMS fee payment reminders</span>
                            </label>
                            <label class="checkbox-label">
                                <input type="checkbox" name="smsExamAlerts" 
                                       <%= settings.smsExamAlerts ? 'checked' : '' %>>
                                <span>Exam schedule alerts</span>
                            </label>
                        </div>
                    </div>
                    
                    <div class="form-actions">
                        <button type="submit" class="btn btn-brand-primary">
                            <i class="fas fa-save"></i>
                            Save Notification Settings
                        </button>
                    </div>
                </form>
            </div>

            <!-- Security Settings Section -->
            <div id="securitySection" class="settings-section">
                <div class="section-header">
                    <h3>Security Configuration</h3>
                </div>
                
                <form id="securityForm" class="settings-form" onsubmit="saveSecuritySettings(event)">
                    <div class="setting-group">
                        <h4>Password Policy</h4>
                        <div class="form-grid">
                            <div class="form-group">
                                <label for="minPasswordLength">Minimum Password Length</label>
                                <input type="number" id="minPasswordLength" name="minPasswordLength" class="form-control" 
                                       value="<%= settings.minPasswordLength || 8 %>" min="6" max="20">
                            </div>
                            
                            <div class="form-group">
                                <label for="passwordExpiry">Password Expiry (days)</label>
                                <input type="number" id="passwordExpiry" name="passwordExpiry" class="form-control" 
                                       value="<%= settings.passwordExpiry || 90 %>" min="0">
                                <small class="form-help">0 = no expiry</small>
                            </div>
                        </div>
                        
                        <div class="security-options">
                            <label class="checkbox-label">
                                <input type="checkbox" name="requireUppercase" 
                                       <%= (settings.requireUppercase !== false) ? 'checked' : '' %>>
                                <span>Require uppercase letters</span>
                            </label>
                            <label class="checkbox-label">
                                <input type="checkbox" name="requireNumbers" 
                                       <%= (settings.requireNumbers !== false) ? 'checked' : '' %>>
                                <span>Require numbers</span>
                            </label>
                            <label class="checkbox-label">
                                <input type="checkbox" name="requireSpecialChars" 
                                       <%= settings.requireSpecialChars ? 'checked' : '' %>>
                                <span>Require special characters</span>
                            </label>
                        </div>
                    </div>
                    
                    <div class="setting-group">
                        <h4>Login Security</h4>
                        <div class="form-grid">
                            <div class="form-group">
                                <label for="maxLoginAttempts">Max Login Attempts</label>
                                <input type="number" id="maxLoginAttempts" name="maxLoginAttempts" class="form-control" 
                                       value="<%= settings.maxLoginAttempts || 5 %>" min="3" max="10">
                            </div>
                            
                            <div class="form-group">
                                <label for="lockoutDuration">Lockout Duration (minutes)</label>
                                <input type="number" id="lockoutDuration" name="lockoutDuration" class="form-control" 
                                       value="<%= settings.lockoutDuration || 30 %>" min="5">
                            </div>
                        </div>
                        
                        <div class="security-options">
                            <label class="checkbox-label">
                                <input type="checkbox" name="enableTwoFactor" 
                                       <%= settings.enableTwoFactor ? 'checked' : '' %>>
                                <span>Enable two-factor authentication</span>
                            </label>
                            <label class="checkbox-label">
                                <input type="checkbox" name="enableSessionTimeout" 
                                       <%= (settings.enableSessionTimeout !== false) ? 'checked' : '' %>>
                                <span>Enable automatic session timeout</span>
                            </label>
                        </div>
                    </div>
                    
                    <div class="form-actions">
                        <button type="submit" class="btn btn-brand-primary">
                            <i class="fas fa-save"></i>
                            Save Security Settings
                        </button>
                    </div>
                </form>
            </div>

            <!-- Email Configuration Section -->
            <div id="emailSection" class="settings-section">
                <div class="section-header">
                    <h3>Email Configuration</h3>
                </div>
                
                <form id="emailForm" class="settings-form" onsubmit="saveEmailSettings(event)">
                    <div class="setting-group">
                        <h4>SMTP Settings</h4>
                        <div class="form-grid">
                            <div class="form-group">
                                <label for="smtpHost">SMTP Host</label>
                                <input type="text" id="smtpHost" name="smtpHost" class="form-control" 
                                       value="<%= settings.smtpHost || '' %>" placeholder="smtp.gmail.com">
                            </div>
                            
                            <div class="form-group">
                                <label for="smtpPort">SMTP Port</label>
                                <input type="number" id="smtpPort" name="smtpPort" class="form-control" 
                                       value="<%= settings.smtpPort || 587 %>">
                            </div>
                            
                            <div class="form-group">
                                <label for="smtpUsername">SMTP Username</label>
                                <input type="text" id="smtpUsername" name="smtpUsername" class="form-control" 
                                       value="<%= settings.smtpUsername || '' %>">
                            </div>
                            
                            <div class="form-group">
                                <label for="smtpPassword">SMTP Password</label>
                                <input type="password" id="smtpPassword" name="smtpPassword" class="form-control" 
                                       placeholder="Enter password">
                            </div>
                        </div>
                        
                        <div class="email-options">
                            <label class="checkbox-label">
                                <input type="checkbox" name="smtpSecure" 
                                       <%= (settings.smtpSecure !== false) ? 'checked' : '' %>>
                                <span>Use secure connection (TLS)</span>
                            </label>
                        </div>
                        
                        <div class="form-actions-inline">
                            <button type="button" class="btn btn-outline" onclick="testEmailConnection()">
                                <i class="fas fa-paper-plane"></i>
                                Test Connection
                            </button>
                        </div>
                    </div>
                    
                    <div class="setting-group">
                        <h4>Email Templates</h4>
                        <div class="form-grid">
                            <div class="form-group full-width">
                                <label for="fromEmail">From Email Address</label>
                                <input type="email" id="fromEmail" name="fromEmail" class="form-control" 
                                       value="<%= settings.fromEmail || '' %>">
                            </div>
                            
                            <div class="form-group full-width">
                                <label for="fromName">From Name</label>
                                <input type="text" id="fromName" name="fromName" class="form-control" 
                                       value="<%= settings.fromName || '' %>">
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-actions">
                        <button type="submit" class="btn btn-brand-primary">
                            <i class="fas fa-save"></i>
                            Save Email Settings
                        </button>
                    </div>
                </form>
            </div>

            <!-- Backup & Storage Section -->
            <div id="backupSection" class="settings-section">
                <div class="section-header">
                    <h3>Backup & Storage Configuration</h3>
                </div>
                
                <div class="setting-group">
                    <h4>Automatic Backups</h4>
                    <div class="backup-options">
                        <label class="checkbox-label">
                            <input type="checkbox" name="enableAutoBackup" 
                                   <%= settings.enableAutoBackup ? 'checked' : '' %>>
                            <span>Enable automatic database backups</span>
                        </label>
                        
                        <div class="form-group">
                            <label for="backupFrequency">Backup Frequency</label>
                            <select id="backupFrequency" name="backupFrequency" class="form-control">
                                <option value="daily" <%= (settings.backupFrequency === 'daily' || !settings.backupFrequency) ? 'selected' : '' %>>Daily</option>
                                <option value="weekly" <%= settings.backupFrequency === 'weekly' ? 'selected' : '' %>>Weekly</option>
                                <option value="monthly" <%= settings.backupFrequency === 'monthly' ? 'selected' : '' %>>Monthly</option>
                            </select>
                        </div>
                    </div>
                </div>
                
                <div class="setting-group">
                    <h4>Storage Management</h4>
                    <div class="storage-info">
                        <div class="storage-item">
                            <span class="storage-label">Database Size:</span>
                            <span class="storage-value">245 MB</span>
                        </div>
                        <div class="storage-item">
                            <span class="storage-label">Media Files:</span>
                            <span class="storage-value">1.2 GB</span>
                        </div>
                        <div class="storage-item">
                            <span class="storage-label">Backup Files:</span>
                            <span class="storage-value">890 MB</span>
                        </div>
                    </div>
                    
                    <div class="form-actions-inline">
                        <button type="button" class="btn btn-outline" onclick="createBackup()">
                            <i class="fas fa-database"></i>
                            Create Backup Now
                        </button>
                        <button type="button" class="btn btn-outline" onclick="cleanupStorage()">
                            <i class="fas fa-trash"></i>
                            Cleanup Storage
                        </button>
                    </div>
                </div>
            </div>

            <!-- Integrations Section -->
            <div id="integrationsSection" class="settings-section">
                <div class="section-header">
                    <h3>Third-party Integrations</h3>
                </div>
                
                <div class="integration-list">
                    <div class="integration-item">
                        <div class="integration-info">
                            <i class="fab fa-google"></i>
                            <div class="integration-details">
                                <h4>Google Workspace</h4>
                                <p>Single sign-on and email integration</p>
                            </div>
                        </div>
                        <button class="btn btn-outline" onclick="configureIntegration('google')">
                            Configure
                        </button>
                    </div>
                    
                    <div class="integration-item">
                        <div class="integration-info">
                            <i class="fab fa-microsoft"></i>
                            <div class="integration-details">
                                <h4>Microsoft 365</h4>
                                <p>Teams integration and file storage</p>
                            </div>
                        </div>
                        <button class="btn btn-outline" onclick="configureIntegration('microsoft')">
                            Configure
                        </button>
                    </div>
                    
                    <div class="integration-item">
                        <div class="integration-info">
                            <i class="fas fa-sms"></i>
                            <div class="integration-details">
                                <h4>SMS Gateway</h4>
                                <p>SMS notifications to parents and students</p>
                            </div>
                        </div>
                        <button class="btn btn-outline" onclick="configureIntegration('sms')">
                            Configure
                        </button>
                    </div>
                </div>
            </div>

            <!-- Advanced Settings Section -->
            <div id="advancedSection" class="settings-section">
                <div class="section-header">
                    <h3>Advanced Settings</h3>
                </div>
                
                <div class="setting-group">
                    <h4>System Maintenance</h4>
                    <div class="maintenance-options">
                        <div class="maintenance-item">
                            <div class="maintenance-info">
                                <strong>Clear Application Cache</strong>
                                <p>Clear cached data to improve performance</p>
                            </div>
                            <button class="btn btn-outline" onclick="clearCache()">
                                <i class="fas fa-broom"></i>
                                Clear Cache
                            </button>
                        </div>
                        
                        <div class="maintenance-item">
                            <div class="maintenance-info">
                                <strong>Database Optimization</strong>
                                <p>Optimize database tables for better performance</p>
                            </div>
                            <button class="btn btn-outline" onclick="optimizeDatabase()">
                                <i class="fas fa-database"></i>
                                Optimize Database
                            </button>
                        </div>
                        
                        <div class="maintenance-item">
                            <div class="maintenance-info">
                                <strong>System Logs</strong>
                                <p>View and manage system logs</p>
                            </div>
                            <button class="btn btn-outline" onclick="viewLogs()">
                                <i class="fas fa-file-alt"></i>
                                View Logs
                            </button>
                        </div>
                    </div>
                </div>
                
                <div class="setting-group">
                    <h4>Developer Options</h4>
                    <div class="developer-options">
                        <label class="checkbox-label">
                            <input type="checkbox" name="enableDebugMode" 
                                   <%= settings.enableDebugMode ? 'checked' : '' %>>
                            <span>Enable debug mode</span>
                        </label>
                        <label class="checkbox-label">
                            <input type="checkbox" name="enableApiLogging" 
                                   <%= settings.enableApiLogging ? 'checked' : '' %>>
                            <span>Enable API request logging</span>
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- Settings Specific Styles -->
<style>
.settings-container {
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: 2rem;
}

.settings-sidebar {
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    height: fit-content;
}

.settings-nav {
    display: flex;
    flex-direction: column;
}

.nav-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    width: 100%;
    padding: 1rem 1.5rem;
    background: none;
    border: none;
    text-align: left;
    cursor: pointer;
    transition: all 0.2s;
    border-bottom: 1px solid #f1f1f1;
}

.nav-item:last-child {
    border-bottom: none;
}

.nav-item:hover {
    background: #f8f9fa;
}

.nav-item.active {
    background: #007bff;
    color: white;
}

.settings-content {
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.settings-section {
    display: none;
    padding: 2rem;
}

.settings-section.active {
    display: block;
}

.section-header {
    margin-bottom: 2rem;
