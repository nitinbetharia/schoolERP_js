<script>
// Help articles database (mock data)
const helpArticles = [
    { id: 'setup-school', title: 'How to set up your school profile', category: 'getting-started', content: 'Step-by-step school setup guide...' },
    { id: 'add-students', title: 'Adding new students to the system', category: 'student-management', content: 'Student enrollment process...' },
