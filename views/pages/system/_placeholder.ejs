<!-- Dynamic Placeholder Page -->
<% currentPath = currentPath || '/coming-soon'; %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="<%= icon || 'bi bi-gear' %>"></i> <%= title %>
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-arrow-clockwise"></i> Refresh
            </button>
        </div>
    </div>
</div>

<!-- Flash Messages -->
<%- include('../../partials/flash-messages') %>

<!-- Coming Soon Card -->
                <div class="row justify-content-center">
                    <div class="form-col">
                        <div class="card border-0 shadow-sm">
                            <div class="card-body text-center py-5">
                                <div class="mb-4">
                                    <i class="<%= icon || 'bi bi-tools' %> display-1 text-brand-primary opacity-50"></i>
                                </div>
                                <h3 class="card-title text-brand-primary mb-3"><%= title %></h3>
                                <p class="card-text text-muted mb-4">
                                    <%= description %>
                                </p>
                                
                                <!-- Feature Preview -->
                                <% if (typeof features !== 'undefined' && features) { %>
                                    <div class="row g-3 mb-4">
                                        <% features.forEach(feature => { %>
                                            <div class="form-col">
                                                <div class="d-flex align-items-center justify-content-start text-start">
                                                    <i class="<%= feature.icon %> text-brand-primary me-3"></i>
                                                    <div>
                                                        <h6 class="mb-1"><%= feature.name %></h6>
                                                        <small class="text-muted"><%= feature.description %></small>
                                                    </div>
                                                </div>
                                            </div>
                                        <% }); %>
                                    </div>
                                <% } %>

                                <div class="alert alert-info border-0 bg-light">
                                    <i class="bi bi-info-circle me-2"></i>
                                    <strong>Development Status:</strong> This feature is currently under development.
                                    <% if (typeof eta !== 'undefined' && eta) { %>
                                        Expected completion: <strong><%= eta %></strong>
                                    <% } %>
                                </div>

                                <div class="d-flex justify-content-center gap-2">
                                    <button class="btn btn-brand-primary" onclick="requestFeature()">
                                        <i class="bi bi-lightbulb"></i> Request Feature
                                    </button>
                                    <button class="btn btn-outline-secondary" onclick="viewRoadmap()">
                                        <i class="bi bi-map"></i> View Roadmap
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Development Progress -->
                <% if (typeof progress !== 'undefined' && progress) { %>
                    <div class="row mt-4">
                        <div class="form-col">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">
                                        <i class="bi bi-graph-up"></i> Development Progress
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="progress mb-2" style="height: 10px;">
                                        <div class="progress-bar bg-brand-primary" role="progressbar" 
                                             style="width: <%= progress %>%" 
                                             aria-valuenow="<%= progress %>" aria-valuemin="0" aria-valuemax="100">
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between text-small">
                                        <span class="text-muted">Progress: <%= progress %>% Complete</span>
                                        <span class="text-muted">
                                            <% if (typeof nextMilestone !== 'undefined' && nextMilestone) { %>
                                                Next: <%= nextMilestone %>
                                            <% } %>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </main>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        function requestFeature() {
            // Placeholder function for feature requests
            alert('Feature request functionality will be implemented soon!');
        }
        
        function viewRoadmap() {
            // Placeholder function for roadmap view
            alert('Development roadmap will be available soon!');
        }
        
        // Auto-refresh functionality
        function autoRefresh() {
            location.reload();
        }
        
        // Set up refresh button
        document.querySelector('.btn-outline-secondary').addEventListener('click', autoRefresh);
    </script>
