<!-- Create School Page -->
<div class="container-fluid py-4">
   <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
      <h1 class="h2"><i class="fas fa-plus"></i> Create School</h1>
      <div class="btn-toolbar mb-2 mb-md-0">
         <a href="/system/schools" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to Schools
         </a>
      </div>
   </div>

   <ul class="nav nav-pills mb-3" id="schoolWizard" role="tablist">
      <li class="nav-item" role="presentation">
         <button
            class="nav-link active"
            id="step1-tab"
            data-bs-toggle="pill"
            data-bs-target="#step1"
            type="button"
            role="tab">
            1. Basic Info
         </button>
      </li>
      <li class="nav-item" role="presentation">
         <button class="nav-link" id="step2-tab" data-bs-toggle="pill" data-bs-target="#step2" type="button" role="tab">
            2. Contacts
         </button>
      </li>
      <li class="nav-item" role="presentation">
         <button class="nav-link" id="step3-tab" data-bs-toggle="pill" data-bs-target="#step3" type="button" role="tab">
            3. Configuration
         </button>
      </li>
      <li class="nav-item" role="presentation">
         <button class="nav-link" id="step4-tab" data-bs-toggle="pill" data-bs-target="#step4" type="button" role="tab">
            4. Review
         </button>
      </li>
   </ul>

   <div class="tab-content" id="schoolWizardContent">
      <div class="tab-pane fade show active" id="step1" role="tabpanel" aria-labelledby="step1-tab">
         <div class="card mb-3">
            <div class="card-body">
               <div class="row g-3">
                  <div class="form-col">
                     <label class="form-label">School Name <span class="text-danger">*</span></label>
                     <input
                        type="text"
                        class="form-control"
                        id="schoolName"
                        name="schoolName"
                        placeholder="e.g., Maroon International School"
                        required />
                  </div>
                  <div class="form-col">
                     <label class="form-label">Trust <span class="text-danger">*</span></label>
                     <select class="form-select" id="trustId" name="trustId" required>
                        <option value="">-- Select Trust --</option>
                        <% if (locals.trusts && trusts.length > 0) { %>
                           <% trusts.forEach(function(trust) { %>
                              <option value="<%= trust.id %>" data-code="<%= trust.trust_code %>">
                                 <%= trust.trust_name %> (<%= trust.trust_code.toUpperCase() %>)
                              </option>
                           <% }); %>
                        <% } else { %>
                           <option disabled>No active trusts available</option>
                        <% } %>
                     </select>
                     <small class="form-text text-muted">School will be created under the selected trust</small>
                  </div>
                  <div class="form-col">
                     <label class="form-label">UDISE Code</label>
                     <input type="text" class="form-control" id="udiseCode" placeholder="Optional" />
                  </div>
                  <div class="form-col">
                     <label class="form-label">Board</label>
                     <select class="form-select" id="board">
                        <option value="CBSE">CBSE</option>
                        <option value="ICSE">ICSE</option>
                        <option value="STATE">State Board</option>
                        <option value="IB">IB</option>
                     </select>
                  </div>
                  <div class="form-col">
                     <label class="form-label">Medium</label>
                     <select class="form-select" id="medium">
                        <option value="EN">English</option>
                        <option value="HI">Hindi</option>
                     </select>
                  </div>
               </div>
            </div>
         </div>
         <div class="d-flex justify-content-end">
            <button class="btn btn-brand-primary" data-next="#step2-tab">Next</button>
         </div>
      </div>

      <div class="tab-pane fade" id="step2" role="tabpanel" aria-labelledby="step2-tab">
         <div class="card mb-3">
            <div class="card-body">
               <div class="row g-3">
                  <div class="form-col">
                     <label class="form-label">Principal Name</label>
                     <input type="text" class="form-control" id="principalName" />
                  </div>
                  <div class="form-col">
                     <label class="form-label">Principal Email</label>
                     <input type="email" class="form-control" id="principalEmail" />
                  </div>
                  <div class="form-col">
                     <label class="form-label">Phone</label>
                     <input type="text" class="form-control" id="phone" />
                  </div>
                  <div class="form-col">
                     <label class="form-label">Alt Phone</label>
                     <input type="text" class="form-control" id="altPhone" />
                  </div>
               </div>
            </div>
         </div>
         <div class="d-flex justify-content-between">
            <button class="btn btn-outline-secondary" data-prev="#step1-tab">Back</button>
            <button class="btn btn-brand-primary" data-next="#step3-tab">Next</button>
         </div>
      </div>

      <div class="tab-pane fade" id="step3" role="tabpanel" aria-labelledby="step3-tab">
         <div class="card mb-3">
            <div class="card-body">
               <div class="row g-3">
                  <div class="form-col">
                     <label class="form-label">Start Academic Year</label>
                     <input type="number" class="form-control" id="startYear" value="2025" />
                  </div>
                  <div class="form-col">
                     <label class="form-label">Time Zone</label>
                     <select class="form-select" id="timezone">
                        <option value="Asia/Kolkata">Asia/Kolkata</option>
                     </select>
                  </div>
                  <div class="form-col">
                     <label class="form-label">Currency</label>
                     <select class="form-select" id="currency">
                        <option value="INR">INR</option>
                     </select>
                  </div>
               </div>
            </div>
         </div>
         <div class="d-flex justify-content-between">
            <button class="btn btn-outline-secondary" data-prev="#step2-tab">Back</button>
            <button class="btn btn-brand-primary" data-next="#step4-tab">Next</button>
         </div>
      </div>

      <div class="tab-pane fade" id="step4" role="tabpanel" aria-labelledby="step4-tab">
         <div class="card mb-3">
            <div class="card-body">
               <p class="text-muted">Review your entries and submit. (Wiring to API pending)</p>
            </div>
         </div>
         <div class="d-flex justify-content-between">
            <button class="btn btn-outline-secondary" data-prev="#step3-tab">Back</button>
            <button class="btn btn-success" id="submitWizard">Create School</button>
         </div>
      </div>
   </div>

   <script>
      document.addEventListener('DOMContentLoaded', () => {
         document.querySelectorAll('[data-next]').forEach((btn) => {
            btn.addEventListener('click', () => {
               const target = btn.getAttribute('data-next');
               document.querySelector(target).click();
            });
         });
         document.querySelectorAll('[data-prev]').forEach((btn) => {
            btn.addEventListener('click', () => {
               const target = btn.getAttribute('data-prev');
               document.querySelector(target).click();
            });
         });
         document.getElementById('submitWizard').addEventListener('click', () => {
            // TODO: POST to /api/v1/schools or server-side route; show flash then redirect.
            window.location.href = '/system/schools';
         });
      });
   </script>
</div>
