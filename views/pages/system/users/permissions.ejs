<div class="container-fluid py-4">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-key"></i> Permissions</h1>
  </div>

  <div class="card">
    <div class="card-header bg-secondary text-white">
      <h5 class="mb-0">Resources & Actions</h5>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead>
            <tr>
              <th>Resource</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% Object.entries(rbac.resources).forEach(([key, res]) => { %>
              <tr>
                <td>
                  <div class="fw-semibold"><%= res.name %></div>
                  <div class="text-muted small"><code><%= key %></code></div>
                </td>
                <td>
                  <% (res.actions || []).forEach(a => { %>
                    <span class="badge bg-light text-dark border me-1"><%= a %></span>
                  <% }) %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
