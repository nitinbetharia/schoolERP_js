<!-- Edit Trust Page -->
<div class="container-fluid py-4">
   <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
      <h1 class="h2"><i class="bi bi-pencil"></i> Edit Trust</h1>
      <div class="btn-toolbar mb-2 mb-md-0">
         <a href="/system/trusts" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to Trusts
         </a>
      </div>
   </div>

   <div class="alert alert-info">Editing trust ID: <%= trustId %></div>

   <ul class="nav nav-pills mb-3" id="trustEditWizard" role="tablist">
      <li class="nav-item" role="presentation">
         <button
            class="nav-link active"
            id="tstep1-tab"
            data-bs-toggle="pill"
            data-bs-target="#tstep1"
            type="button"
            role="tab">
            1. Basic Info
         </button>
      </li>
      <li class="nav-item" role="presentation">
         <button
            class="nav-link"
            id="tstep2-tab"
            data-bs-toggle="pill"
            data-bs-target="#tstep2"
            type="button"
            role="tab">
            2. Contacts
         </button>
      </li>
      <li class="nav-item" role="presentation">
         <button
            class="nav-link"
            id="tstep3-tab"
            data-bs-toggle="pill"
            data-bs-target="#tstep3"
            type="button"
            role="tab">
            3. Configuration
         </button>
      </li>
      <li class="nav-item" role="presentation">
         <button
            class="nav-link"
            id="tstep4-tab"
            data-bs-toggle="pill"
            data-bs-target="#tstep4"
            type="button"
            role="tab">
            4. Review
         </button>
      </li>
   </ul>

   <div class="tab-content" id="trustEditWizardContent">
      <div class="tab-pane fade show active" id="tstep1" role="tabpanel" aria-labelledby="tstep1-tab">
         <div class="card mb-3">
            <div class="card-body">
               <div class="row g-3">
                  <div class="form-col">
                     <label class="form-label">Trust Name</label>
                     <input type="text" class="form-control" id="trustName" value="<%= trust.trust_name || '' %>" />
                  </div>
                  <div class="form-col">
                     <label class="form-label">Trust Code</label>
                     <input type="text" class="form-control" id="trustCode" value="<%= trust.trust_code || '' %>" readonly />
                     <div class="form-text">Trust code cannot be changed after creation</div>
                  </div>
                  <div class="form-col">
                     <label class="form-label">Registration No.</label>
                     <input type="text" class="form-control" id="trustRegNo" value="<%= trust.registration_number || '' %>" />
                  </div>
                  <div class="form-col">
                     <label class="form-label">Subdomain</label>
                     <div class="input-group">
                        <input type="text" class="form-control" id="subdomain" value="<%= trust.subdomain || '' %>" readonly />
                        <span class="input-group-text">.localhost:3000</span>
                     </div>
                     <div class="form-text">Subdomain cannot be changed after creation</div>
                  </div>
               </div>
            </div>
         </div>
         <div class="d-flex justify-content-end">
            <button class="btn btn-brand-primary" data-next="#tstep2-tab">Next</button>
         </div>
      </div>

      <div class="tab-pane fade" id="tstep2" role="tabpanel" aria-labelledby="tstep2-tab">
         <div class="card mb-3">
            <div class="card-body">
               <div class="row g-3">
                  <div class="form-col">
                     <label class="form-label">Primary Contact</label>
                     <input type="text" class="form-control" id="primaryContact" value="<%= trust.primary_contact || '' %>" />
                  </div>
                  <div class="form-col">
                     <label class="form-label">Email</label>
                     <input type="email" class="form-control" id="email" value="<%= trust.contact_email || '' %>" />
                  </div>
                  <div class="form-col">
                     <label class="form-label">Phone</label>
                     <input type="tel" class="form-control" id="phone" value="<%= trust.contact_phone || '' %>" />
                  </div>
                  <div class="form-col">
                     <label class="form-label">Address</label>
                     <textarea class="form-control" id="address" rows="3"><%= trust.address || '' %></textarea>
                  </div>
               </div>
            </div>
         </div>
         <div class="d-flex justify-content-between">
            <button class="btn btn-outline-secondary" data-prev="#tstep1-tab">Back</button>
            <button class="btn btn-brand-primary" data-next="#tstep3-tab">Next</button>
         </div>
      </div>

      <div class="tab-pane fade" id="tstep3" role="tabpanel" aria-labelledby="tstep3-tab">
         <div class="card mb-3">
            <div class="card-body">
               <div class="row g-3">
                  <div class="form-col">
                     <label class="form-label">Status</label>
                     <select class="form-select" id="status">
                        <option value="ACTIVE" <%= trust.status === 'ACTIVE' ? 'selected' : '' %>>Active</option>
                        <option value="SUSPENDED" <%= trust.status === 'SUSPENDED' ? 'selected' : '' %>>Suspended</option>
                        <option value="SETUP_PENDING" <%= trust.status === 'SETUP_PENDING' ? 'selected' : '' %>>Setup Pending</option>
                     </select>
                  </div>
                  <div class="form-col">
                     <label class="form-label">Database Name</label>
                     <input type="text" class="form-control" id="databaseName" value="<%= trust.database_name || '' %>" readonly />
                     <div class="form-text">Database name is auto-generated and cannot be changed</div>
                  </div>
                  <div class="form-col">
                     <label class="form-label">Created Date</label>
                     <input type="text" class="form-control" value="<%= new Date(trust.created_at).toLocaleDateString('en-US', { 
                        year: 'numeric', 
                        month: 'long', 
                        day: 'numeric' 
                     }) %>" readonly />
                  </div>
                  <div class="form-col">
                     <label class="form-label">Description (Optional)</label>
                     <textarea class="form-control" id="description" rows="3" placeholder="Enter trust description..."><%= trust.description || '' %></textarea>
                  </div>
               </div>
            </div>
         </div>
         <div class="d-flex justify-content-between">
            <button class="btn btn-outline-secondary" data-prev="#tstep2-tab">Back</button>
            <button class="btn btn-brand-primary" data-next="#tstep4-tab">Next</button>
         </div>
      </div>

      <div class="tab-pane fade" id="tstep4" role="tabpanel" aria-labelledby="tstep4-tab">
         <div class="card mb-3">
            <div class="card-body">
               <p class="text-muted">Review changes and save. (Wiring to API pending)</p>
            </div>
         </div>
         <div class="d-flex justify-content-between">
            <button class="btn btn-outline-secondary" data-prev="#tstep3-tab">Back</button>
            <button class="btn btn-success" id="submitWizard">Save Changes</button>
         </div>
      </div>
   </div>

   <script>
      document.addEventListener('DOMContentLoaded', () => {
         document.querySelectorAll('[data-next]').forEach((btn) => {
            btn.addEventListener('click', () => {
               const target = btn.getAttribute('data-next');
               document.querySelector(target).click();
            });
         });
         document.querySelectorAll('[data-prev]').forEach((btn) => {
            btn.addEventListener('click', () => {
               const target = btn.getAttribute('data-prev');
               document.querySelector(target).click();
            });
         });
         document.getElementById('submitWizard').addEventListener('click', () => {
            // TODO: PATCH to /api/v1/trusts/:id; show flash then redirect.
            window.location.href = '/system/trusts';
         });
      });
   </script>
</div>
