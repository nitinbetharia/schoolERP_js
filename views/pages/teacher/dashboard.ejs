<!-- Teacher Dashboard -->
<main class="main-content teacher-portal">
    <!-- Page Header -->
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fas fa-chalkboard-teacher"></i>
                Teacher Dashboard
            </h1>
            <p class="page-description">Welcome back, <%= user.name %>! Here's your daily overview.</p>
        </div>
        
        <div class="header-actions">
            <div class="current-date">
                <i class="fas fa-calendar-alt"></i>
                <span id="currentDate"></span>
            </div>
        </div>
    </div>

    <!-- Quick Stats Cards -->
    <div class="stats-grid">
        <div class="stat-card classes">
            <div class="stat-icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-details">
                <h3><%= teacherStats.totalClasses %></h3>
                <p>Total Classes</p>
                <a href="/teacher/classes" class="stat-link">
                    <i class="fas fa-arrow-right"></i>
                    View Classes
                </a>
            </div>
        </div>
        
        <div class="stat-card students">
            <div class="stat-icon">
                <i class="fas fa-user-graduate"></i>
            </div>
            <div class="stat-details">
                <h3><%= teacherStats.totalStudents %></h3>
                <p>Total Students</p>
                <a href="/teacher/students" class="stat-link">
                    <i class="fas fa-arrow-right"></i>
                    View Students
                </a>
            </div>
        </div>
        
        <div class="stat-card attendance">
            <div class="stat-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="stat-details">
                <h3><%= teacherStats.todayAttendanceMarked %>/<%= teacherStats.totalClasses %></h3>
                <p>Today's Attendance</p>
                <a href="/teacher/attendance/mark" class="stat-link">
                    <i class="fas fa-arrow-right"></i>
                    Mark Attendance
                </a>
            </div>
        </div>
        
        <div class="stat-card assignments">
            <div class="stat-icon">
                <i class="fas fa-clipboard-list"></i>
            </div>
            <div class="stat-details">
                <h3><%= teacherStats.pendingAssignments %></h3>
                <p>Pending Reviews</p>
                <a href="/teacher/assignments" class="stat-link">
                    <i class="fas fa-arrow-right"></i>
                    View Assignments
                </a>
            </div>
        </div>
    </div>

    <!-- Dashboard Content Grid -->
    <div class="dashboard-grid">
        <!-- Today's Schedule -->
        <div class="dashboard-card schedule-card">
            <div class="card-header">
                <h3>
                    <i class="fas fa-clock"></i>
                    Today's Classes
                </h3>
                <a href="/teacher/schedule" class="card-action">
                    <i class="fas fa-external-link-alt"></i>
                    Full Schedule
                </a>
            </div>
            
            <div class="card-content">
                <% if (teacherStats.upcomingClasses && teacherStats.upcomingClasses.length > 0) { %>
                    <div class="class-list">
                        <% teacherStats.upcomingClasses.forEach(function(classItem) { %>
                            <div class="class-item">
                                <div class="class-time">
                                    <i class="fas fa-clock"></i>
                                    <%= classItem.time %>
                                </div>
                                <div class="class-details">
                                    <h4><%= classItem.subject %></h4>
                                    <p>
                                        <i class="fas fa-users"></i>
                                        <%= classItem.class %> 
                                        <span class="separator">â€¢</span>
                                        <i class="fas fa-map-marker-alt"></i>
                                        <%= classItem.room %>
                                    </p>
                                </div>
                                <div class="class-actions">
                                    <button class="btn btn-sm btn-outline">
                                        <i class="fas fa-user-check"></i>
                                        Mark Attendance
                                    </button>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="no-data">
                        <i class="fas fa-calendar-check fa-2x"></i>
                        <p>No classes scheduled for today</p>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Recent Activities -->
        <div class="dashboard-card activities-card">
            <div class="card-header">
                <h3>
                    <i class="fas fa-bell"></i>
                    Recent Activities
                </h3>
                <a href="/teacher/messages" class="card-action">
                    <i class="fas fa-external-link-alt"></i>
                    All Messages
                </a>
            </div>
            
            <div class="card-content">
                <% if (teacherStats.recentActivities && teacherStats.recentActivities.length > 0) { %>
                    <div class="activity-list">
                        <% teacherStats.recentActivities.forEach(function(activity) { %>
                            <div class="activity-item">
                                <div class="activity-icon">
                                    <% if (activity.type === 'assignment') { %>
                                        <i class="fas fa-clipboard-list"></i>
                                    <% } else if (activity.type === 'attendance') { %>
                                        <i class="fas fa-user-check"></i>
                                    <% } else { %>
                                        <i class="fas fa-info-circle"></i>
                                    <% } %>
                                </div>
                                <div class="activity-details">
                                    <p><%= activity.message %></p>
                                    <span class="activity-time">
                                        <%= new Date(activity.timestamp).toLocaleString('en-IN') %>
                                    </span>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="no-data">
                        <i class="fas fa-inbox fa-2x"></i>
                        <p>No recent activities</p>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="dashboard-card actions-card">
            <div class="card-header">
                <h3>
                    <i class="fas fa-bolt"></i>
                    Quick Actions
                </h3>
            </div>
            
            <div class="card-content">
                <div class="quick-actions">
                    <a href="/teacher/attendance/mark" class="quick-action">
                        <div class="action-icon">
                            <i class="fas fa-user-check"></i>
                        </div>
                        <span>Mark Attendance</span>
                    </a>
                    
                    <a href="/teacher/assignments/new" class="quick-action">
                        <div class="action-icon">
                            <i class="fas fa-plus-circle"></i>
                        </div>
                        <span>Create Assignment</span>
                    </a>
                    
                    <a href="/teacher/students/grades" class="quick-action">
                        <div class="action-icon">
                            <i class="fas fa-star"></i>
                        </div>
                        <span>Grade Students</span>
                    </a>
                    
                    <a href="/teacher/resources" class="quick-action">
                        <div class="action-icon">
                            <i class="fas fa-folder-open"></i>
                        </div>
                        <span>Resources</span>
                    </a>
                    
                    <a href="/teacher/messages" class="quick-action">
                        <div class="action-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <span>Messages</span>
                    </a>
                    
                    <a href="/teacher/attendance/reports" class="quick-action">
                        <div class="action-icon">
                            <i class="fas fa-chart-bar"></i>
                        </div>
                        <span>Reports</span>
                    </a>
                </div>
            </div>
        </div>

        <!-- Performance Overview -->
        <div class="dashboard-card performance-card">
            <div class="card-header">
                <h3>
                    <i class="fas fa-chart-line"></i>
                    Class Performance
                </h3>
                <a href="/teacher/students/performance" class="card-action">
                    <i class="fas fa-external-link-alt"></i>
                    Detailed View
                </a>
            </div>
            
            <div class="card-content">
                <div class="performance-metrics">
                    <div class="metric">
                        <div class="metric-label">Average Attendance</div>
                        <div class="metric-value">87%</div>
                        <div class="metric-trend positive">
                            <i class="fas fa-arrow-up"></i>
                            +3% from last month
                        </div>
                    </div>
                    
                    <div class="metric">
                        <div class="metric-label">Assignment Submission</div>
                        <div class="metric-value">92%</div>
                        <div class="metric-trend positive">
                            <i class="fas fa-arrow-up"></i>
                            +5% from last month
                        </div>
                    </div>
                    
                    <div class="metric">
                        <div class="metric-label">Average Grade</div>
                        <div class="metric-value">B+</div>
                        <div class="metric-trend neutral">
                            <i class="fas fa-minus"></i>
                            No change
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

