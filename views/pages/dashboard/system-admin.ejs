<script>
function systemAdminDashboard() {
    return {
        loading: true,
        showCreateTrustModal: false,
        creatingTrust: false,
        stats: {
            totalTrusts: 0,
            activeUsers: 0,
            systemHealth: 'checking',
            databaseStatus: 'checking'
        },
        trusts: [],
        newTrust: {
            trustName: '',
            trustCode: '',
            contactEmail: ''
        },

        async loadDashboardData() {
            try {
                this.loading = true;
                
                // Load system stats
                const statsResponse = await fetch('/api/v1/admin/system/stats');
                if (statsResponse.ok) {
                    const statsData = await statsResponse.json();
                    this.stats = statsData.data;
                }

                // Load trusts
                await this.refreshTrusts();
                
            } catch (error) {
                console.error('Failed to load dashboard data:', error);
                window.notify('error', 'Failed to load dashboard data');
            } finally {
                this.loading = false;
            }
        },

        async refreshTrusts() {
            try {
                const response = await fetch('/api/v1/admin/system/trusts');
                if (response.ok) {
                    const data = await response.json();
                    this.trusts = data.data || [];
                } else {
                    window.notify('error', 'Failed to load trusts');
                }
            } catch (error) {
                console.error('Failed to load trusts:', error);
                window.notify('error', 'Failed to load trusts');
            }
        },

        async createTrust() {
            try {
                this.creatingTrust = true;
                
                const response = await fetch('/api/v1/admin/system/trusts', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(this.newTrust)
                });

                if (response.ok) {
                    window.notify('success', 'Trust created successfully');
                    this.showCreateTrustModal = false;
                    this.newTrust = { trustName: '', trustCode: '', contactEmail: '' };
                    await this.refreshTrusts();
                    await this.loadDashboardData(); // Refresh stats
                } else {
                    const errorData = await response.json();
                    window.notify('error', errorData.error?.message || 'Failed to create trust');
                }
            } catch (error) {
                console.error('Failed to create trust:', error);
                window.notify('error', 'Failed to create trust');
            } finally {
                this.creatingTrust = false;
            }
        },

        viewTrust(trust) {
            // Navigate to trust details page
            window.location.href = `/admin/system/trusts/${trust.id}`;
        },

        editTrust(trust) {
            // Navigate to trust edit page
            window.location.href = `/admin/system/trusts/${trust.id}/edit`;
        }
    };
}
</script>