<!-- Forgot Password Page -->
<%
// Layout configuration for clean auth page
hideNav = true;
hideFooter = true;
%>

<div class="min-vh-100 d-flex align-items-center justify-content-center py-3 px-3">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="form-col">
                <!-- Forgot Password Card -->
                <div class="card shadow-lg border-0">
                    <div class="card-body p-4 p-sm-5">
                        
                        <!-- Back to Login Link -->
                        <div class="mb-4">
                            <a href="/login" class="btn btn-link btn-sm p-0 text-decoration-none">
                                <i class="fas fa-arrow-left me-2"></i>Back to Login
                            </a>
                        </div>

                        <!-- Logo & Title -->
                        <div class="text-center mb-5">
                            <% if (tenant && tenant.branding && tenant.branding.logo) { %>
                            <img src="<%= tenant.branding.logo %>" alt="<%= tenant.name %>" class="mb-4" style="height: 60px;">
                            <% } else { %>
                            <div class="bg-brand-primary text-white rounded d-inline-flex align-items-center justify-content-center mb-4" 
                                 style="width: 60px; height: 60px; font-size: 1.5rem;">
                                <i class="fas fa-key"></i>
                            </div>
                            <% } %>
                            
                            <h2 class="h4 text-dark fw-semibold mb-2">
                                Reset Your Password
                            </h2>
                            <p class="text-muted mb-0">
                                Enter your email address and we'll send you a secure link to reset your password.
                            </p>
                        </div>
                        
                        <!-- Forgot Password Form -->
                        <form id="forgotPasswordForm" method="POST" action="/forgot-password" class="needs-validation" novalidate>
                            
                            <!-- Email Field -->
                            <div class="mb-4">
                                <label for="email" class="form-label fw-medium">
                                    Email Address
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="fas fa-envelope text-muted"></i>
                                    </span>
                                    <input type="email" 
                                           class="form-control border-start-0 ps-0" 
                                           id="email" 
                                           name="email" 
                                           placeholder="Enter your email address"
                                           required 
                                           autocomplete="email"
                                           autofocus>
                                </div>
                                <div class="invalid-feedback">
                                    Please enter a valid email address.
                                </div>
                                <small class="form-text text-muted">
                                    <i class="fas fa-info-circle me-1"></i>
                                    We'll send password reset instructions to this email
                                </small>
                            </div>
                            
                            <!-- Security Notice -->
                            <div class="alert alert-info border-0 bg-info bg-opacity-10 mb-4">
                                <div class="d-flex align-items-start">
                                    <i class="fas fa-shield-alt text-info me-3 mt-1"></i>
                                    <div class="flex-grow-1">
                                        <h6 class="alert-heading mb-1">Security Notice</h6>
                                        <p class="mb-0 small">
                                            For your security, the reset link will expire in 30 minutes and can only be used once.
                                        </p>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Submit Button -->
                            <button type="submit" class="btn btn-brand-primary w-100 py-2 fw-medium" id="submitButton">
                                <i class="fas fa-paper-plane me-2"></i>
                                Send Reset Link
                            </button>
                            
                        </form>
                        
                        <!-- Additional Help -->
                        <div class="text-center mt-4 pt-3 border-top">
                            <p class="text-muted small mb-2">
                                <i class="fas fa-question-circle me-1"></i>
                                Don't have access to your email?
                            </p>
                            <a href="/support" class="text-decoration-none small">
                                <i class="fas fa-headset me-1"></i>Contact Support
                            </a>
                        </div>
                    </div>
                    
                    <!-- Form Status Indicator -->
                    <div class="card-footer bg-light text-center py-3">
                        <div id="formStatus" class="small text-muted">
                            <i class="fas fa-lock me-1"></i>
                            Secure password recovery powered by <%= tenant && tenant.name ? tenant.name : 'School ERP System' %>
                        </div>
                    </div>
                </div>
                
                <!-- Help Links -->
                <div class="card border-0 bg-transparent mt-4">
                    <div class="card-body text-center p-3">
                        <div class="d-flex justify-content-center gap-4 flex-wrap">
                            <a href="/help/password-reset" class="text-decoration-none small">
                                <i class="fas fa-book me-1"></i>Reset Guide
                            </a>
                            <a href="/login" class="text-decoration-none small">
                                <i class="fas fa-sign-in-alt me-1"></i>Try Login Again
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom CSS for Forgot Password Page -->
<style>
    /* Hide header on forgot password page */
    .app-header {
        display: none !important;
    }
    
    /* Prevent horizontal scroll */
    html, body {
        overflow-x: hidden !important;
        max-width: 100%;
    }
    
    /* Global box-sizing for all elements */
    *, *::before, *::after {
        box-sizing: border-box;
    }
    
    /* Responsive card adjustments */
    @media (max-width: 576px) {
        .container-fluid {
            padding-left: 10px;
            padding-right: 10px;
        }
        
        .card-body {
            padding: 2rem 1.5rem !important;
        }
        
        .alert {
            font-size: 0.875rem;
        }
    }
    
    /* Input group styling improvements */
    .input-group + .invalid-feedback {
        display: block;
        width: 100%;
        margin-top: 0.25rem;
        font-size: 0.875em;
        color: #dc3545;
    }
    
    /* Form validation states */
    .was-validated .input-group .form-control:invalid {
        border-color: #dc3545;
        box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
    }
    
    .was-validated .input-group .form-control:invalid ~ .input-group-text {
        border-color: #dc3545;
    }
    
    .was-validated .input-group .form-control:valid {
        border-color: #198754;
        box-shadow: 0 0 0 0.2rem rgba(25, 135, 84, 0.25);
    }
    
    .was-validated .input-group .form-control:valid ~ .input-group-text {
        border-color: #198754;
    }
    
    /* Button loading state */
    .btn.loading {
        pointer-events: none;
        opacity: 0.75;
    }
    
    /* Alert improvements */
    .alert .alert-heading {
        font-size: 0.875rem;
        font-weight: 600;
    }
</style>

<!-- JavaScript for Forgot Password Form -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('forgotPasswordForm');
        const emailInput = document.getElementById('email');
        const submitButton = document.getElementById('submitButton');
        const formStatus = document.getElementById('formStatus');
        
        // Form submission handler
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Validate form
            if (!form.checkValidity()) {
                e.stopPropagation();
                form.classList.add('was-validated');
                return;
            }
            
            // Show loading state
            submitButton.disabled = true;
            submitButton.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Sending...';
            formStatus.innerHTML = '<i class="fas fa-sync fa-spin me-1"></i>Sending reset instructions...';
            
            // Prepare form data
            const formData = new FormData(form);
            
            // Submit form via fetch
            fetch(form.action, {
                method: 'POST',
                body: formData,
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Success response
                    form.innerHTML = `
                        <div class="text-center">
                            <div class="mb-4">
                                <div class="bg-success bg-opacity-10 text-success rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                                     style="width: 80px; height: 80px; font-size: 2rem;">
                                    <i class="fas fa-check"></i>
                                </div>
                            </div>
                            <h4 class="text-success mb-3">Reset Link Sent!</h4>
                            <p class="text-muted mb-4">
                                We've sent password reset instructions to <strong>${emailInput.value}</strong>.
                                Please check your email and follow the instructions to reset your password.
                            </p>
                            <div class="alert alert-warning border-0 bg-warning bg-opacity-10 mb-4">
                                <small class="text-warning">
                                    <i class="fas fa-clock me-1"></i>
                                    The reset link will expire in 30 minutes for your security.
                                </small>
                            </div>
                            <a href="/login" class="btn btn-brand-primary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Login
                            </a>
                        </div>
                    `;
                    
                    formStatus.innerHTML = '<i class="fas fa-check-circle text-success me-1"></i>Reset instructions sent successfully';
                    
                    // Show notification if available
                    if (window.showNotification) {
                        window.showNotification('Password reset instructions sent to your email', 'success');
                    }
                } else {
                    throw new Error(data.error || 'Failed to send reset instructions');
                }
            })
            .catch(error => {
                console.error('Reset error:', error);
                
                // Show error message
                const errorMsg = error.message || 'Failed to send reset instructions. Please try again.';
                if (window.showNotification) {
                    window.showNotification(errorMsg, 'error');
                }
                
                // Reset form state
                submitButton.disabled = false;
                submitButton.innerHTML = '<i class="fas fa-paper-plane me-2"></i>Send Reset Link';
                formStatus.innerHTML = '<i class="fas fa-exclamation-triangle text-warning me-1"></i>Failed to send reset instructions';
                
                // Focus email field for retry
                emailInput.focus();
            });
        });
        
        // Real-time email validation
        emailInput.addEventListener('blur', function() {
            if (this.value && this.checkValidity()) {
                this.classList.add('is-valid');
                this.classList.remove('is-invalid');
            } else if (this.value) {
                this.classList.add('is-invalid');
                this.classList.remove('is-valid');
            }
        });
        
        emailInput.addEventListener('input', function() {
            if (this.classList.contains('is-invalid') && this.checkValidity()) {
                this.classList.remove('is-invalid');
                this.classList.add('is-valid');
            }
        });
        
        // Auto-focus email field
        emailInput.focus();
    });
</script>
