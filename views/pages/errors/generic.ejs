<!-- Generic Error Page -->
<% 
// Set layout variables for clean error page
hideNav = true;
hideFooter = true;

// Default error information
const errorCode = error?.statusCode || error?.status || 'Error';
const errorMessage = error?.message || 'An unexpected error occurred';
const errorTitle = {
    400: 'Bad Request',
    401: 'Unauthorized', 
    403: 'Forbidden',
    404: 'Not Found',
    500: 'Internal Server Error',
    502: 'Bad Gateway',
    503: 'Service Unavailable'
}[errorCode] || 'Error';
%>

<div class="min-vh-100 d-flex align-items-center justify-content-center py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="form-col">
                <div class="text-center">
                    
                    <!-- Error Illustration -->
                    <div class="mb-5">
                        <div class="display-1 mb-3" 
                             style="font-size: 8rem; font-weight: 700;"
                             class="<%= errorCode >= 500 ? 'text-danger' : errorCode >= 400 ? 'text-warning' : 'text-info' %>">
                            <%= errorCode %>
                        </div>
                        <div class="mb-4">
                            <i class="fas fa-<%= errorCode >= 500 ? 'exclamation-triangle' : errorCode === '403' ? 'lock' : errorCode === '404' ? 'search' : 'exclamation-circle' %> text-muted" 
                               style="font-size: 4rem; opacity: 0.5;"></i>
                        </div>
                    </div>
                    
                    <!-- Error Message -->
                    <div class="mb-5">
                        <h1 class="h3 text-dark fw-semibold mb-3">
                            <%= errorTitle %>
                        </h1>
                        <p class="text-muted lead mb-4">
                            <%= errorMessage %>
                        </p>
                        
                        <!-- Additional Error Details -->
                        <% if (typeof error !== 'undefined' && error) { %>
                        <div class="alert alert-light border text-start">
                            <div class="row small">
                                <% if (error.timestamp) { %>
                                <div class="form-col">
                                    <strong>Time:</strong> <%= new Date(error.timestamp).toLocaleString() %>
                                </div>
                                <% } %>
                                <% if (error.requestId) { %>
                                <div class="form-col">
                                    <strong>Request ID:</strong> <code><%= error.requestId %></code>
                                </div>
                                <% } %>
                                <% if (error.path) { %>
                                <div class="form-col">
                                    <strong>Path:</strong> <code><%= error.path %></code>
                                </div>
                                <% } %>
                                <% if (process.env.NODE_ENV === 'development' && error.stack) { %>
                                <div class="form-col">
                                    <details>
                                        <summary class="btn btn-sm btn-outline-secondary">Stack Trace (Dev)</summary>
                                        <pre class="mt-2 p-2 bg-dark text-light small text-start overflow-auto"><%= error.stack %></pre>
                                    </details>
                                </div>
                                <% } %>
                            </div>
                        </div>
                        <% } %>
                    </div>
                    
                    <!-- Action Buttons -->
                    <div class="d-grid gap-2 d-md-block mb-5">
                        <button type="button" 
                                class="btn btn-brand-primary px-4 py-2" 
                                onclick="window.location.reload()">
                            <i class="fas fa-redo me-2"></i>
                            Try Again
                        </button>
                        <button type="button" 
                                class="btn btn-outline-secondary px-4 py-2 ms-md-2" 
                                onclick="history.back()">
                            <i class="fas fa-arrow-left me-2"></i>
                            Go Back
                        </button>
                        <a href="/" class="btn btn-outline-secondary px-4 py-2 ms-md-2">
                            <i class="fas fa-home me-2"></i>
                            Home
                        </a>
                    </div>
                    
                    <!-- Help Options -->
                    <div class="row g-3 text-center">
                        <div class="form-col">
                            <div class="card h-100 border-0 bg-light">
                                <div class="card-body py-4">
                                    <i class="fas fa-question-circle text-brand-primary mb-2" style="font-size: 1.5rem;"></i>
                                    <h6 class="fw-semibold">Get Help</h6>
                                    <small class="text-muted">Find answers in our help center</small>
                                    <div class="mt-3">
                                        <a href="/help" class="btn btn-sm btn-outline-primary">
                                            Help Center
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-col">
                            <div class="card h-100 border-0 bg-light">
                                <div class="card-body py-4">
                                    <i class="fas fa-bug text-brand-primary mb-2" style="font-size: 1.5rem;"></i>
                                    <h6 class="fw-semibold">Report Issue</h6>
                                    <small class="text-muted">Help us improve the system</small>
                                    <div class="mt-3">
                                        <a href="/support/report" class="btn btn-sm btn-outline-primary">
                                            Report Bug
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-col">
                            <div class="card h-100 border-0 bg-light">
                                <div class="card-body py-4">
                                    <i class="fas fa-headset text-brand-primary mb-2" style="font-size: 1.5rem;"></i>
                                    <h6 class="fw-semibold">Contact Support</h6>
                                    <small class="text-muted">Get immediate assistance</small>
                                    <div class="mt-3">
                                        <a href="/support" class="btn btn-sm btn-outline-primary">
                                            Contact Us
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Footer with minimal info -->
<footer class="py-4 mt-auto">
    <div class="container">
        <div class="text-center text-muted small">
            <p class="mb-0">
                &copy; <%= new Date().getFullYear() %> 
                <%= tenant && tenant.name ? tenant.name + ' - ' : '' %>School ERP System
            </p>
        </div>
    </div>
</footer>
