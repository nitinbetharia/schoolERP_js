<!-- 404 Not Found Error Page -->
<% // Set layout variables for clean error page hideNav = true; hideFooter = true; %>

<div class="min-vh-100 d-flex align-items-center justify-content-center py-5">
   <div class="container">
      <div class="row justify-content-center">
         <div class="col-lg-6 col-md-8">
            <div class="text-center">
               <!-- Error Illustration -->
               <div class="mb-5">
                  <div class="display-1 text-brand-primary mb-3" style="font-size: 8rem; font-weight: 700">404</div>
                  <div class="mb-4">
                     <i class="fas fa-search text-muted" style="font-size: 4rem; opacity: 0.3"></i>
                  </div>
               </div>

               <!-- Error Message -->
               <div class="mb-5">
                  <h1 class="h3 text-dark fw-semibold mb-3">Page Not Found</h1>
                  <p class="text-muted lead mb-4">
                     Sorry, the page you are looking for doesn't exist or has been moved.
                  </p>
                  <p class="text-muted small">
                     <strong>Requested URL:</strong>
                     <code class="bg-light px-2 py-1 rounded"
                        ><%= typeof originalUrl !== 'undefined' ? originalUrl : 'Unknown' %></code
                     >
                  </p>
               </div>

               <!-- Action Buttons -->
               <div class="d-grid gap-2 d-md-block mb-5">
                  <a href="/" class="btn btn-brand-primary px-4 py-2">
                     <i class="fas fa-home me-2"></i>
                     Go Home
                  </a>
                  <button type="button" class="btn btn-outline-secondary px-4 py-2 ms-md-2" onclick="history.back()">
                     <i class="fas fa-arrow-left me-2"></i>
                     Go Back
                  </button>
               </div>

               <!-- Helpful Links -->
               <div class="row g-3 text-center">
                  <div class="col-md-4">
                     <div class="card h-100 border-0 bg-light">
                        <div class="card-body py-4">
                           <i class="fas fa-search text-brand-primary mb-2" style="font-size: 1.5rem"></i>
                           <h6 class="fw-semibold">Search</h6>
                           <small class="text-muted">Try searching for what you need</small>
                           <div class="mt-3">
                              <a href="/search" class="btn btn-sm btn-outline-primary"> Search Site </a>
                           </div>
                        </div>
                     </div>
                  </div>
                  <div class="col-md-4">
                     <div class="card h-100 border-0 bg-light">
                        <div class="card-body py-4">
                           <i class="fas fa-question-circle text-brand-primary mb-2" style="font-size: 1.5rem"></i>
                           <h6 class="fw-semibold">Get Help</h6>
                           <small class="text-muted">Find answers and support</small>
                           <div class="mt-3">
                              <a href="/help" class="btn btn-sm btn-outline-primary"> Help Center </a>
                           </div>
                        </div>
                     </div>
                  </div>
                  <div class="col-md-4">
                     <div class="card h-100 border-0 bg-light">
                        <div class="card-body py-4">
                           <i class="fas fa-headset text-brand-primary mb-2" style="font-size: 1.5rem"></i>
                           <h6 class="fw-semibold">Contact Us</h6>
                           <small class="text-muted">Reach out for assistance</small>
                           <div class="mt-3">
                              <a href="/support" class="btn btn-sm btn-outline-primary"> Contact Support </a>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>

<!-- Footer with minimal info -->
<footer class="py-4 mt-auto">
   <div class="container">
      <div class="text-center text-muted small">
         <p class="mb-0">
            &copy; <%= new Date().getFullYear() %> <%= tenant && tenant.name ? tenant.name + ' - ' : '' %>School ERP
            System
         </p>
      </div>
   </div>
</footer>
