<!-- Flash Messages -->
<!-- Session-based flash messages -->
<% if (typeof flashMessages !== 'undefined' && flashMessages.error && flashMessages.error.length > 0) { %>
  <% flashMessages.error.forEach((errorMsg, index) => { %>
    <div id="flash-error-<%= index %>" class="fixed top-4 right-4 z-50 max-w-md" style="top: <%= 1 + (index * 5) %>rem;">
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 shadow-lg fade-in">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-red-800">
                        <%= errorMsg %>
                    </p>
                </div>
                <div class="ml-auto pl-3">
                    <button onclick="closeFlash('flash-error-<%= index %>')" class="text-red-400 hover:text-red-600">
                        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
  <% }); %>
<% } %>

<% if (typeof flashMessages !== 'undefined' && flashMessages.message && flashMessages.message.length > 0) { %>
  <% flashMessages.message.forEach((successMsg, index) => { %>
    <div id="flash-success-<%= index %>" class="fixed top-4 right-4 z-50 max-w-md" style="top: <%= 1 + (index * 5) %>rem;">
        <div class="bg-green-50 border border-green-200 rounded-lg p-4 shadow-lg fade-in">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-green-800">
                        <%= successMsg %>
                    </p>
                </div>
                <div class="ml-auto pl-3">
                    <button onclick="closeFlash('flash-success-<%= index %>')" class="text-green-400 hover:text-green-600">
                        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
  <% }); %>
<% } %>

<!-- Fallback for URL-based messages (backward compatibility) -->
<% if (typeof error !== 'undefined' && error && (!flashMessages || !flashMessages.error || flashMessages.error.length === 0)) { %>
    <div id="flash-error-url" class="fixed top-4 right-4 z-50 max-w-md">
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 shadow-lg fade-in">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-red-800">
                        <%= typeof error === 'string' ? error : error.message %>
                    </p>
                </div>
                <div class="ml-auto pl-3">
                    <button onclick="closeFlash('flash-error-url')" class="text-red-400 hover:text-red-600">
                        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
<% } %>

<% if (typeof message !== 'undefined' && message && (!flashMessages || !flashMessages.message || flashMessages.message.length === 0)) { %>
    <div id="flash-success-url" class="fixed top-4 right-4 z-50 max-w-md">
        <div class="bg-green-50 border border-green-200 rounded-lg p-4 shadow-lg fade-in">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-green-800">
                        <%= message %>
                    </p>
                </div>
                <div class="ml-auto pl-3">
                    <button onclick="closeFlash('flash-success-url')" class="text-green-400 hover:text-green-600">
                        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
<% } %>