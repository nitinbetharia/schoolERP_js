<!-- Authenticated User Header -->
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center py-2">
        
        <!-- Left: Logo & Brand -->
        <div class="d-flex align-items-center">
            <% if (tenant && tenant.branding && tenant.branding.logo) { %>
            <img src="<%= tenant.branding.logo %>" alt="<%= tenant.name %>" class="me-3" style="height: 40px;">
            <% } else { %>
            <div class="bg-brand-primary text-white rounded d-flex align-items-center justify-content-center me-3" 
                 style="width: 40px; height: 40px;">
                <i class="fas fa-graduation-cap"></i>
            </div>
            <% } %>
            
            <div>
                <h1 class="h5 mb-0 fw-semibold text-dark">
                    <%= tenant && tenant.name ? tenant.name : 'School ERP System' %>
                </h1>
                <% if ((typeof subtitle !== 'undefined' && subtitle) || (typeof title !== 'undefined' && title !== 'Dashboard')) { %>
                <small class="text-muted"><%= (typeof subtitle !== 'undefined' ? subtitle : '') || (typeof title !== 'undefined' ? title : '') %></small>
                <% } %>
            </div>
        </div>
        
        <!-- Right: User Actions -->
        <div class="d-flex align-items-center gap-3">
            
            <!-- Notifications -->
            <div class="dropdown">
                <button class="btn btn-link text-muted p-2 position-relative" 
                        type="button" 
                        data-bs-toggle="dropdown" 
                        aria-expanded="false"
                        title="Notifications">
                    <i class="fas fa-bell"></i>
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" 
                          style="font-size: 0.6em;">
                        3
                        <span class="visually-hidden">unread messages</span>
                    </span>
                </button>
                <ul class="dropdown-menu dropdown-menu-end" style="min-width: 300px;">
                    <li><h6 class="dropdown-header">Recent Notifications</h6></li>
                    <li><a class="dropdown-item" href="#">
                        <div class="d-flex">
                            <i class="fas fa-info-circle text-info me-2 mt-1"></i>
                            <div class="flex-grow-1">
                                <small class="fw-semibold">System Update</small><br>
                                <small class="text-muted">New features available</small>
                            </div>
                        </div>
                    </a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item text-center" href="/notifications">View All</a></li>
                </ul>
            </div>
            
            <!-- Quick Actions (Role-based) -->
            <% 
            // Check if user has system admin privileges (flexible role checking)
            const isSystemAdmin = user.role && (user.role.toUpperCase() === 'SYSTEM_ADMIN' || user.role.toLowerCase() === 'system-admin');
            %>
            <% if (isSystemAdmin) { %>
            <div class="dropdown">
                <button class="btn btn-outline-primary btn-sm dropdown-toggle" 
                        type="button" 
                        data-bs-toggle="dropdown" 
                        aria-expanded="false">
                    <i class="fas fa-plus me-1"></i> Quick Add
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="/system/trusts/new">
                        <i class="fas fa-building me-2"></i>New Trust
                    </a></li>
                    <li><a class="dropdown-item" href="/system/users/new">
                        <i class="fas fa-user-plus me-2"></i>System User
                    </a></li>
                </ul>
            </div>
            <% } else if (user.role === 'trust-admin') { %>
            <div class="dropdown">
                <button class="btn btn-outline-primary btn-sm dropdown-toggle" 
                        type="button" 
                        data-bs-toggle="dropdown" 
                        aria-expanded="false">
                    <i class="fas fa-plus me-1"></i> Quick Add
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="/schools/new">
                        <i class="fas fa-school me-2"></i>New School
                    </a></li>
                    <li><a class="dropdown-item" href="/students/new">
                        <i class="fas fa-user-graduate me-2"></i>New Student
                    </a></li>
                    <li><a class="dropdown-item" href="/users/new">
                        <i class="fas fa-user-plus me-2"></i>New Staff
                    </a></li>
                </ul>
            </div>
            <% } %>
            
            <!-- User Profile Dropdown -->
            <div class="dropdown">
                <button class="btn btn-link text-decoration-none p-0 d-flex align-items-center" 
                        type="button" 
                        data-bs-toggle="dropdown" 
                        aria-expanded="false">
                    <div class="d-flex align-items-center">
                        <div class="bg-brand-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" 
                             style="width: 36px; height: 36px;">
                            <span class="fw-semibold">
                                <%= user.name ? user.name.charAt(0).toUpperCase() : 'U' %>
                            </span>
                        </div>
                        <div class="text-start d-none d-md-block">
                            <div class="fw-semibold text-dark small">
                                <%= user.full_name || user.username || user.email || 'User' %>
                            </div>
                            <div class="text-muted" style="font-size: 0.75rem;">
                                <%= user.role.replace('-', ' ').replace('_', ' ').split(' ')
                                    .map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase())
                                    .join(' ') %>
                            </div>
                        </div>
                        <i class="fas fa-chevron-down text-muted ms-2" style="font-size: 0.75rem;"></i>
                    </div>
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><h6 class="dropdown-header">
                        <%= user.name %>
                        <br><small class="text-muted"><%= user.email %></small>
                    </h6></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="/profile">
                        <i class="fas fa-user me-2"></i>My Profile
                    </a></li>
                    <li><a class="dropdown-item" href="/settings">
                        <i class="fas fa-cog me-2"></i>Settings
                    </a></li>
                    <% if (isSystemAdmin) { %>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="/system/health">
                        <i class="fas fa-heartbeat me-2"></i>System Health
                    </a></li>
                    <% } %>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form method="POST" action="/logout" class="d-inline">
                            <button type="submit" class="dropdown-item text-danger">
                                <i class="fas fa-sign-out-alt me-2"></i>Sign Out
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
