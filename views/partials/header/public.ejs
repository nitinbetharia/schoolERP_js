<!-- Public/Unauthenticated Header -->
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center py-2">
        
        <!-- Left: Logo & Brand -->
        <div class="d-flex align-items-center">
            <% if (tenant && tenant.branding && tenant.branding.logo) { %>
            <img src="<%= tenant.branding.logo %>" alt="<%= tenant.name %>" class="me-3" style="height: 40px;">
            <% } else { %>
            <div class="bg-brand-primary text-white rounded d-flex align-items-center justify-content-center me-3" 
                 style="width: 40px; height: 40px;">
                <i class="fas fa-graduation-cap"></i>
            </div>
            <% } %>
            
            <div>
                <h1 class="h5 mb-0 fw-semibold text-dark">
                    <%= tenant && tenant.name ? tenant.name : 'School ERP System' %>
                </h1>
                <small class="text-muted">Educational Management Platform</small>
            </div>
        </div>
        
        <!-- Right: Auth Actions -->
        <div class="d-flex align-items-center gap-3">
            <a href="/help" class="text-muted text-decoration-none">
                <i class="fas fa-question-circle me-1"></i>
                <span class="d-none d-md-inline">Help</span>
            </a>
            
            <div class="vr d-none d-md-block"></div>
            
            <a href="/login" class="btn btn-outline-brand-primary btn-sm">
                <i class="fas fa-sign-in-alt me-1"></i>Sign In
            </a>
            
            <% if (typeof showRegister === 'undefined' || showRegister !== false) { %>
            <a href="/register" class="btn btn-brand-primary btn-sm">
                <i class="fas fa-user-plus me-1"></i>Get Started
            </a>
            <% } %>
        </div>
    </div>
</div>
