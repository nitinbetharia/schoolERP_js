<script>
function navigation() {
    return {
        currentPath: window.location.pathname,
        
        isActive(path) {
            // Exact match for root paths
            if (path === '/dashboard' && this.currentPath === '/dashboard') {
                return true;
            }
            
            // Prefix match for sub-paths
            if (path !== '/dashboard' && this.currentPath.startsWith(path)) {
                return true;
            }
            
            return false;
        }
    };
}
</script>