{
  "name": "school-erp-bulletproof",
  "version": "1.1.0",
  "description": "Bulletproof School ERP System - Simple & Maintainable",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node scripts/test-basic-functionality.js",
    "test:jest": "jest",
    "test:config": "node scripts/test-config.js",
    "test:multi-tenant": "node scripts/test-multi-tenant.js",
    "setup": "node scripts/setup-database.js",
    "setup:dev": "node scripts/dev-setup.js",
    "setup:multi-tenant": "node scripts/setup-multi-tenant.js",
    "provision:db": "node scripts/provision-databases.js",
    "first-setup": "node scripts/first-time-setup.js && node scripts/setup-multi-tenant.js && echo 'Multi-tenant database setup completed'",
    "reset-db": "node scripts/reset-database.js",
    "reset-db:full": "node scripts/reset-database.js full",
    "reset-db:structure": "node scripts/reset-database.js structure",
    "reset-db:data": "node scripts/reset-database.js data",
    "reset-db:force": "node scripts/reset-database.js full --force",
    "reset-db:system": "node scripts/reset-system-database.js",
    "reset-db:trust": "node scripts/reset-trust-database.js",
    "backup": "node scripts/backup-database.js full",
    "backup:full": "node scripts/backup-database.js full",
    "backup:schema": "node scripts/backup-database.js schema",
    "backup:clean": "node scripts/backup-database.js clean",
    "backup:system": "node scripts/backup-system-database.js",
    "backup:trust": "node scripts/backup-trust-database.js",
    "health": "curl -s http://localhost:3000/health",
    "validate": "node scripts/validate-setup.js",
    "db:migrate": "node scripts/setup-database.js --migrate-only",
    "db:migrate:system": "node scripts/migrate-system-database.js",
    "db:migrate:trust": "node scripts/migrate-trust-database.js",
    "db:seed": "node scripts/setup-database.js --seed-only",
    "db:status": "node scripts/check-db-structure.js",
    "db:status:system": "node scripts/check-system-db.js",
    "db:status:trust": "node scripts/check-trust-db.js",
    "tenant:create": "node scripts/create-tenant.js",
    "tenant:list": "node scripts/list-tenants.js",
    "tenant:backup": "node scripts/backup-tenant.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install"
  },
  "keywords": [
    "school",
    "erp",
    "education",
    "management",
    "bulletproof"
  ],
  "author": "School ERP Team",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^8.1.5",
    "archiver": "^7.0.1",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.1",
    "ejs": "^3.1.10",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "express-ejs-layouts": "^2.5.1",
    "express-fileupload": "^1.5.2",
    "express-mysql-session": "^3.0.1",
    "express-rate-limit": "^8.0.1",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "joi": "^18.0.0",
    "mysql2": "^3.14.3",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5",
    "pdfkit": "^0.17.1",
    "twilio": "^5.8.0",
    "uuid": "^11.1.0",
    "validator": "^13.12.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-n": "^17.10.3",
    "eslint-plugin-promise": "^7.2.1",
    "husky": "^9.1.6",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.5",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "nodemonConfig": {
    "ignore": [
      "logs/*",
      "*.log",
      "node_modules/*"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  }
}
