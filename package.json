{
   "name": "school-erp-bulletproof",
   "version": "2.0.0",
   "description": "Simple & Maintainable School ERP System",
   "main": "server.js",
   "scripts": {
      "start": "node server.js",
      "dev": "nodemon server.js",
      "setup": "node scripts/migrate-database.js && node scripts/initial-setup.js",
      "test": "jest --config=tests/jest.config.js",
      "test:watch": "jest --config=tests/jest.config.js --watch",
      "test:coverage": "jest --config=tests/jest.config.js --coverage",
      "test:frontend": "jest --config=tests/jest.config.js tests/frontend/",
      "test:api": "jest --config=tests/jest.config.js tests/api/",
      "test:utils": "jest --config=tests/jest.config.js tests/utils/",
      "test:phase2": "jest --config=tests/jest.config.js --testNamePattern=\"Phase 2\"",
      "lint": "eslint .",
      "lint:fix": "eslint . --fix",
      "format": "prettier --write .",
      "cleanup:temp": "node -e \"const fs=require('fs'),path=require('path'); try{fs.rmSync(path.join(__dirname,'temp'),{recursive:true,force:true}); console.log('Temp files cleaned');}catch(e){console.log('No temp files to clean');}\""
   },
   "keywords": [
      "school",
      "erp",
      "education",
      "management",
      "bulletproof"
   ],
   "author": "School ERP Team",
   "license": "MIT",
   "dependencies": {
      "bcryptjs": "^3.0.2",
      "compression": "^1.7.4",
      "cors": "^2.8.5",
      "dayjs": "^1.11.13",
      "dotenv": "^17.2.1",
      "ejs": "^3.1.10",
      "exceljs": "^4.4.0",
      "express": "^5.1.0",
      "express-ejs-layouts": "^2.5.1",
      "express-mysql-session": "^3.0.1",
      "express-rate-limit": "^8.0.1",
      "express-session": "^1.18.2",
      "helmet": "^8.1.0",
      "joi": "^18.0.1",
      "ms": "^2.1.3",
      "mysql2": "^3.14.3",
      "nodemailer": "^7.0.5",
      "pdfkit": "^0.17.1",
      "sequelize": "^6.37.7",
      "winston": "^3.17.0",
      "winston-daily-rotate-file": "^5.0.0",
      "xss": "^1.0.15"
   },
   "devDependencies": {
      "eslint": "^9.33.0",
      "eslint-config-prettier": "^10.1.8",
      "jest": "^30.1.1",
      "nodemon": "^3.1.4",
      "prettier": "^3.3.3",
      "puppeteer": "^24.17.1",
      "supertest": "^7.1.4"
   },
   "engines": {
      "node": ">=22.0.0"
   },
   "nodemonConfig": {
      "ignore": [
         "logs/*",
         "*.log",
         "node_modules/*"
      ],
      "env": {
         "NODE_ENV": "development"
      }
   }
}
