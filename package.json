{
  "name": "school-erp-bulletproof",
  "version": "1.1.0",
  "description": "Bulletproof School ERP System - Simple & Maintainable",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate:docs": "node scripts/verify-documentation-consistency.js",
    "fix:docs": "node scripts/auto-fix-documentation.js",
    "validate:all": "npm run lint && npm run format:check && npm run validate:docs",
    "prepare": "husky install"
  },
  "keywords": [
    "school",
    "erp",
    "education",
    "management",
    "bulletproof"
  ],
  "author": "School ERP Team",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^8.1.5",
    "archiver": "^7.0.1",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.1",
    "ejs": "^3.1.10",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "express-ejs-layouts": "^2.5.1",
    "express-fileupload": "^1.5.2",
    "express-mysql-session": "^3.0.1",
    "express-rate-limit": "^8.0.1",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "joi": "^18.0.0",
    "mysql2": "^3.14.3",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5",
    "pdfkit": "^0.17.1",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "twilio": "^5.8.0",
    "uuid": "^11.1.0",
    "validator": "^13.12.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-n": "^17.10.3",
    "eslint-plugin-promise": "^7.2.1",
    "husky": "^9.1.6",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.5",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "overrides": {
    "glob": "^10.4.0",
    "rimraf": "^5.0.0",
    "unzipper": "^0.12.0",
    "fast-csv": "^5.0.0"
  },
  "nodemonConfig": {
    "ignore": [
      "logs/*",
      "*.log",
      "node_modules/*"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  }
}
