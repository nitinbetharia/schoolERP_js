{
  "name": "school-erp-bulletproof",
  "version": "1.1.0",
  "description": "Bulletproof School ERP System - Simple & Maintainable",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node scripts/test-basic-functionality.js",
    "test:jest": "jest",
    "test:config": "node scripts/test-config.js",
    "test:multi-tenant": "node scripts/test-multi-tenant.js",
    "setup": "node scripts/orm-setup.js",
    "setup:dev": "node scripts/orm-dev-setup.js",
    "setup:system": "node scripts/orm-setup-system.js",
    "setup:tenant": "node scripts/orm-setup-tenant.js",
    "first-setup": "node scripts/orm-first-setup.js",
    "reset-db": "node scripts/orm-reset-database.js",
    "reset-db:system": "node scripts/orm-reset-system.js",
    "reset-db:tenant": "node scripts/orm-reset-tenant.js",
    "backup": "node scripts/orm-backup.js",
    "backup:system": "node scripts/orm-backup-system.js",
    "backup:tenant": "node scripts/orm-backup-tenant.js",
    "health": "curl -s http://localhost:3000/health",
    "validate": "node scripts/orm-validate.js",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:seed:undo": "npx sequelize-cli db:seed:undo:all",
    "db:status": "node scripts/orm-status.js",
    "tenant:create": "node scripts/orm-create-tenant.js",
    "tenant:list": "node scripts/orm-list-tenants.js",
    "tenant:backup": "node scripts/orm-backup-tenant.js",
    "tenant:delete": "node scripts/orm-delete-tenant.js",
    "trust:create": "node scripts/orm-create-trust.js",
    "trust:list": "node scripts/orm-list-trusts.js",
    "trust:status": "node scripts/orm-trust-status.js",
    "models:sync": "node scripts/orm-sync-models.js",
    "models:validate": "node scripts/orm-validate-models.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install"
  },
  "keywords": [
    "school",
    "erp",
    "education",
    "management",
    "bulletproof"
  ],
  "author": "School ERP Team",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^8.1.5",
    "archiver": "^7.0.1",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.1",
    "ejs": "^3.1.10",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "express-ejs-layouts": "^2.5.1",
    "express-fileupload": "^1.5.2",
    "express-mysql-session": "^3.0.1",
    "express-rate-limit": "^8.0.1",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "joi": "^18.0.0",
    "mysql2": "^3.14.3",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5",
    "pdfkit": "^0.17.1",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "twilio": "^5.8.0",
    "uuid": "^11.1.0",
    "validator": "^13.12.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-n": "^17.10.3",
    "eslint-plugin-promise": "^7.2.1",
    "husky": "^9.1.6",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.5",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "overrides": {
    "glob": "^10.4.0",
    "rimraf": "^5.0.0",
    "unzipper": "^0.12.0",
    "fast-csv": "^5.0.0"
  },
  "nodemonConfig": {
    "ignore": [
      "logs/*",
      "*.log",
      "node_modules/*"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  }
}
