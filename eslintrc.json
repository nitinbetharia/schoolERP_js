{
  "root": true,
  "env": {
    "es2023": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2023,
    "sourceType": "script"
  },
  "extends": [
    "eslint:recommended",
    "plugin:n/recommended",
    "plugin:promise/recommended",
    "prettier"
  ],
  "rules": {
    "no-console": [
      "error",
      {
        "allow": ["warn", "error"]
      }
    ],
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "no-var": "error",
    "prefer-const": "error",
    "promise/catch-or-return": "error",
    "n/no-missing-require": "off",
    "n/no-unsupported-features/node-builtins": "off"
  },
  "overrides": [
    {
      "files": ["**/*.test.js", "tests/**/*.js"],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
