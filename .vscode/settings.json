{
   "github.copilot.enable": {
      "*": true,
      "plaintext": true,
      "markdown": true,
      "scminput": false
   },
   "github.copilot.editor.enableAutoCompletions": true,
   "github.copilot.chat.welcomeMessage": "always",
   "github.copilot.advanced": {
      "debug.overrideEngine": "copilot-chat",
      "debug.useNodejsDebugger": true
   },
   "github.copilot.editor.enableCodeActions": true,
   "github.copilot.preferredAccount": "",
   "github.copilot.chat.localeOverride": "auto",
   "github.copilot.chat.insertionText": "// GitHub Copilot suggestion",
   "github.copilot.renameSuggestions.triggerAutomatically": true,

   // SINGLE SOURCE OF TRUTH - INSTRUCTION FILES FOR GITHUB COPILOT
   "github.copilot.chat.codeGeneration.useInstructionFiles": true,

   "files.associations": {
      "**/copilot_instructions.md": "markdown",
      "**/COMPLETE_DOCUMENTATION.md": "markdown",
      "**/.copilotignore": "plaintext"
   },
   "files.watcherExclude": {
      "**/node_modules/**": true,
      "**/logs/**": true,
      "**/uploads/**": true,
      "**/.git/**": true
   },
   "editor.suggest.showWords": true,
   "editor.suggest.showSnippets": true,
   "editor.suggest.showUsers": false,
   "editor.inlineSuggest.enabled": true,
   "editor.inlineSuggest.showToolbar": "onHover",
   "editor.inlineSuggest.suppressSuggestions": false,
   "javascript.suggest.enabled": true,
   "javascript.suggest.autoImports": false,
   "typescript.suggest.autoImports": false,
   "emmet.includeLanguages": {
      "javascript": "javascriptreact",
      "ejs": "html"
   },
   "emmet.triggerExpansionOnTab": true,
   "eslint.enable": true,
   "eslint.validate": ["javascript", "javascriptreact"],
   "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
   },
   "editor.formatOnSave": true,
   "editor.defaultFormatter": "esbenp.prettier-vscode",
   "[javascript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "editor.tabSize": 2,
      "editor.insertSpaces": true
   },
   "[json]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
   },
   "[markdown]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "editor.wordWrap": "on"
   },
   "files.exclude": {
      "**/node_modules": true,
      "**/logs": true,
      "**/.nyc_output": true,
      "**/coverage": true
   },
   "search.exclude": {
      "**/node_modules": true,
      "**/logs": true,
      "**/uploads": true,
      "**/.git": true,
      "**/coverage": true
   },
   "cSpell.words": ["Nitin"]
}
