{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "_comment": "Do NOT put secrets here. Override via environment variables in production.",
  "app": {
    "port": 3000,
    "baseUrl": "https://your-domain"
  },
  "security": {
    "session": {
      "cookieName": "sid",
      "cookieMaxAgeMs": 1800000,
      "sameSite": "lax"
    },
    "rateLimit": {
      "windowMs": 900000,
      "max": 200
    }
  },
  "logging": {
    "level": "info",
    "dir": "/var/log/school-erp"
  }
}